---
import BaseLayout from '../layouts/BaseLayout.astro'
import Hero from '../components/blocks/Hero.astro'
import Paragraph from '../components/blocks/Paragraph.astro'
import FAQ from '../components/blocks/FAQ.astro'
---

<BaseLayout title="Site Builder Preview" description="swarm.press site builder component preview">
  <main class="container mx-auto px-4 py-8">
    <Hero
      block={{
        type: 'hero',
        title: 'swarm.press Site Builder',
        subtitle: 'Component Preview',
        cta: { text: 'View Admin', url: 'http://localhost:3002' }
      }}
    />

    <section class="my-12">
      <h2 class="text-2xl font-bold mb-6">Block Components</h2>

      <Paragraph
        block={{
          type: 'paragraph',
          markdown: 'This is a **preview page** for the site-builder components. In production, pages are generated dynamically from database content by the EngineeringAgent.'
        }}
      />

      <FAQ
        block={{
          type: 'faq',
          items: [
            { q: 'What is the site-builder?', a: 'A library of Astro components that render JSON content blocks into static HTML pages.' },
            { q: 'How are pages generated?', a: 'The EngineeringAgent fetches content from the database and uses these components to build static sites.' },
            { q: 'Where is the content stored?', a: 'Content is stored in PostgreSQL as JSON block arrays, not Markdown files.' }
          ]
        }}
      />
    </section>

    <section class="my-12 p-6 bg-gray-100 rounded-lg">
      <h3 class="text-xl font-semibold mb-4">Available Block Types</h3>
      <ul class="list-disc list-inside space-y-2">
        <li>Hero - Large banner with title, subtitle, CTA</li>
        <li>Paragraph - Rich text content</li>
        <li>Heading - H1-H6 headings</li>
        <li>Image - Single image with caption</li>
        <li>Gallery - Image grid</li>
        <li>Quote - Blockquotes</li>
        <li>List - Ordered/unordered lists</li>
        <li>FAQ - Q&A accordion</li>
        <li>Callout - Info/warning boxes</li>
        <li>Embed - YouTube/Vimeo embeds</li>
      </ul>
    </section>
  </main>
</BaseLayout>
