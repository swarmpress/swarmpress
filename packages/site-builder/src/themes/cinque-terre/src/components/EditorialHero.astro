---
interface Props {
  title: string;
  subtitle?: string;
  badge?: string;
  image: string;
  height?: string;
}

const { title, subtitle, badge, image, height = "70vh" } = Astro.props;
---

<section class={`relative overflow-hidden`} style={`height: ${height}; min-height: 600px;`}>
    <div class="absolute inset-0">
        <img 
            src={image} 
            alt={title.replace(/<br\s*\/?>/gi, ' ')} 
            class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/20 to-black/60"></div>
    </div>
    
    <div class="relative h-full container mx-auto px-4 flex flex-col justify-end pb-24">
        <div class="max-w-3xl">
            {badge && (
                <div class="inline-block px-3 py-1 rounded-full bg-white/20 backdrop-blur-sm text-white text-xs font-bold uppercase tracking-widest mb-4">
                    {badge}
                </div>
            )}
            <h1 class="font-serif text-5xl md:text-8xl font-bold text-white mb-6 leading-tight" set:html={title}>
            </h1>
            {subtitle && (
                <p class="text-white/90 text-xl md:text-2xl font-light leading-relaxed max-w-2xl">
                    {subtitle}
                </p>
            )}
        </div>
    </div>
</section>
