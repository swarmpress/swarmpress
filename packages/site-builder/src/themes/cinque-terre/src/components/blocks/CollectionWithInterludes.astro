---
/**
 * CollectionWithInterludes Block
 *
 * Collection of items (accommodations, restaurants, etc.) with
 * editorial interludes inserted at specific positions
 */
import { MapPin, Heart, Star, Home, Info } from 'lucide-react';

interface CollectionItem {
  id: number | string;
  name: string;
  category?: string;
  village?: string;
  image: string;
  intro?: string;
  description?: string;
  giuliaComment?: string;
  signature?: string;
  priceRange?: string;
  practicalInfo?: string;
  googleRating?: number;
  tripadvisorRating?: number;
}

interface Interlude {
  afterIndex: number;
  type?: 'primary' | 'secondary';
  badge?: string;
  title: string;
  quote: string;
  icon?: string;
  align?: 'left' | 'right';
}

interface Props {
  items: CollectionItem[];
  interludes?: Interlude[];
  itemType?: 'accommodation' | 'restaurant' | 'attraction' | 'generic';
}

const { items, interludes = [], itemType = 'generic' } = Astro.props;

// Create a map of interlude positions
const interludeMap = new Map<number, Interlude>();
interludes.forEach(interlude => {
  interludeMap.set(interlude.afterIndex, interlude);
});
---

<section class="py-24 container mx-auto px-4">
  <div class="space-y-32">
    {items.map((item, index) => (
      <div class="space-y-16">
        {/* Check if there's an interlude after the previous item */}
        {interludeMap.has(index) && (
          <div class={`${interludeMap.get(index)?.type === 'secondary' ? 'bg-secondary/40' : 'bg-primary/5'} rounded-3xl p-12 md:p-20 my-24 relative overflow-hidden group`}>
            <div class={`absolute ${interludeMap.get(index)?.align === 'right' ? 'bottom-0 left-0 translate-y-1/4 -translate-x-1/4' : 'top-0 right-0 -translate-y-1/4 translate-x-1/4'} opacity-[0.03] group-hover:opacity-[0.05] transition-opacity duration-700`}>
              <svg class="w-96 h-96" viewBox="0 0 24 24" fill="currentColor">
                <circle cx="12" cy="12" r="10" />
              </svg>
            </div>
            <div class={`max-w-3xl relative ${interludeMap.get(index)?.align === 'right' ? 'ml-auto text-right' : ''}`}>
              <span class="text-[10px] font-bold uppercase tracking-[0.3em] text-primary mb-6 block">
                {interludeMap.get(index)?.badge || 'Editorial Interlude'}
              </span>
              <h3 class="font-serif text-3xl md:text-4xl font-bold mb-6">
                {interludeMap.get(index)?.title}
              </h3>
              <p class="text-xl text-muted-foreground leading-relaxed font-light italic">
                "{interludeMap.get(index)?.quote}"
              </p>
            </div>
          </div>
        )}

        <article class="group cursor-pointer">
          <!-- Image -->
          <div class="relative aspect-[21/9] overflow-hidden rounded-xl mb-8">
            <img
              src={item.image}
              alt={item.name}
              class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-105"
            />
            {item.category && (
              <span class="absolute top-6 left-6 bg-white/90 text-black px-3 py-1.5 rounded-full text-xs font-semibold uppercase tracking-wide shadow-sm">
                {item.category}
              </span>
            )}
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
            {/* Main Content (2/3) */}
            <div class="lg:col-span-2 space-y-8">
              <!-- Header -->
              <div>
                {item.village && (
                  <div class="flex items-center gap-2 mb-3">
                    <MapPin className="w-4 h-4 text-primary" />
                    <span class="text-sm font-medium text-muted-foreground">{item.village}</span>
                  </div>
                )}
                <h2 class="font-serif text-4xl md:text-5xl font-bold mb-4 group-hover:text-primary transition-colors leading-tight">
                  {item.name}
                </h2>
              </div>

              {/* Signature Quote (Intro) */}
              {item.intro && (
                <div class="pl-6 border-l-2 border-primary/30">
                  <p class="font-serif text-xl italic text-foreground/70 leading-relaxed">
                    "{item.intro}"
                  </p>
                </div>
              )}

              {/* Description */}
              {item.description && (
                <div class="prose prose-lg max-w-none">
                  <p class="text-foreground/80 text-lg leading-relaxed mb-4">
                    {item.description}
                  </p>
                  {item.signature && (
                    <p class="text-muted-foreground leading-relaxed flex items-center gap-2">
                      <Heart className="w-4 h-4 text-primary/60" />
                      {item.signature}
                    </p>
                  )}
                </div>
              )}

              {/* Editor's Note (Giulia) */}
              {item.giuliaComment && (
                <div class="relative py-8 group/note">
                  <div class="absolute top-0 right-0 p-4 opacity-[0.05] group-hover/note:opacity-[0.1] transition-opacity">
                    <svg class="w-24 h-24 text-primary fill-current" viewBox="0 0 24 24">
                      <path d="M14.017 21L14.017 18C14.017 16.8954 14.9124 16 16.017 16H19.017C19.5693 16 20.017 15.5523 20.017 15V9C20.017 8.44772 19.5693 8 19.017 8H16.017C15.4647 8 15.017 8.44772 15.017 9V12C15.017 12.5523 14.5693 13 14.017 13H13.017C12.4647 13 12.017 12.5523 12.017 12V9C12.017 6.79086 13.8079 5 16.017 5H19.017C21.2261 5 23.017 6.79086 23.017 9V15C23.017 18.866 19.883 22 16.017 22H14.017V21ZM2.01698 21L2.01698 18C2.01698 16.8954 2.91241 16 4.01698 16H7.01698C7.56927 16 8.01698 15.5523 8.01698 15V9C8.01698 8.44772 7.56927 8 7.01698 8H4.01698C3.4647 8 3.01698 8.44772 3.01698 9V12C3.01698 12.5523 2.56927 13 2.01698 13H1.01698C0.4647 13 0.0169824 12.5523 0.0169824 12V9C0.0169824 6.79086 1.80784 5 4.01698 5H7.01698C9.22612 5 11.017 6.79086 11.017 9V15C11.017 18.866 7.88298 22 4.01698 22H2.01698V21Z" />
                    </svg>
                  </div>
                  <div class="relative flex flex-col md:flex-row items-start gap-6">
                    <div class="relative flex-shrink-0">
                      <div class="w-16 h-16 rounded-full bg-primary/10 p-1 ring-2 ring-primary/20">
                        <div class="w-full h-full rounded-full overflow-hidden bg-secondary">
                          <img
                            src="/giulia_rossi.png"
                            alt="Giulia Rossi"
                            class="w-full h-full object-cover"
                          />
                        </div>
                      </div>
                      <div class="absolute -bottom-1 -right-1 bg-primary text-white p-1 rounded-full shadow-lg">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                        </svg>
                      </div>
                    </div>
                    <div class="flex-1 space-y-4">
                      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary/10 text-primary text-[10px] font-bold uppercase tracking-[0.2em]">
                        Local Perspective
                      </div>
                      <blockquote class="font-serif text-xl text-foreground/90 leading-relaxed italic">
                        "{item.giuliaComment}"
                      </blockquote>
                      <div class="flex items-center gap-3 pt-2">
                        <div class="h-px w-8 bg-primary/30"></div>
                        <p class="text-sm font-medium text-foreground">
                          Giulia Rossi <span class="text-muted-foreground font-normal ml-1">â€” Riomaggiore Expert</span>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              )}
            </div>

            {/* Facts Sidebar (1/3) */}
            <div class="lg:col-span-1">
              <div class="sticky top-24 space-y-10">
                <!-- Header -->
                <div>
                  <h3 class="font-serif text-2xl font-bold text-foreground mb-6 pb-4 border-b border-border">
                    Essential Information
                  </h3>

                  <!-- Map Integration -->
                  <div class="relative aspect-video rounded-xl overflow-hidden border border-border/50 mb-8 group/map">
                    <img
                      src="https://api.mapbox.com/styles/v1/mapbox/light-v11/static/pin-l+bf2b2b(9.7376,44.099)/9.7386,44.0994,15.39,0/640x360@2x?before_layer=admin-1-boundary&access_token=pk.eyJ1IjoiZHJpZXRzY2giLCJhIjoiY21qYjAzMWxtMGJpZDNlc2RqMWN3NHdjbSJ9.k9Xvn4saiEtYhrJE8bKk7Q"
                      alt="Location Map"
                      class="object-cover w-full h-full transition-transform duration-700 group-hover/map:scale-110"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover/map:opacity-100 transition-opacity"></div>
                  </div>
                </div>

                {/* Reviews Section */}
                {(item.googleRating || item.tripadvisorRating) && (
                  <div class="space-y-6">
                    <div class="flex items-center justify-between">
                      <h4 class="text-[10px] font-bold uppercase tracking-[0.2em] text-primary">Traveler Reviews</h4>
                      <div class="h-px flex-1 bg-primary/10 ml-4"></div>
                    </div>

                    <div class="space-y-4">
                      {item.googleRating && (
                        <div class="flex items-center justify-between group/review">
                          <div class="flex items-center gap-3">
                            <span class="text-sm font-medium text-muted-foreground">Google</span>
                          </div>
                          <div class="flex items-center gap-2">
                            <div class="flex items-center gap-0.5">
                              {[...Array(5)].map((_, i) => (
                                <Star className={`w-3 h-3 ${i < Math.floor(item.googleRating!) ? 'fill-amber-400 text-amber-400' : 'fill-gray-200 text-gray-200'}`} />
                              ))}
                            </div>
                            <span class="text-lg font-serif font-bold text-foreground">{item.googleRating}</span>
                          </div>
                        </div>
                      )}

                      {item.tripadvisorRating && (
                        <div class="flex items-center justify-between group/review">
                          <div class="flex items-center gap-3">
                            <span class="text-sm font-medium text-muted-foreground">TripAdvisor</span>
                          </div>
                          <div class="flex items-center gap-2">
                            <div class="flex items-center gap-0.5">
                              {[...Array(5)].map((_, i) => (
                                <div className={`w-3 h-3 rounded-full ${i < Math.floor(item.tripadvisorRating!) ? 'bg-[#34e0a1]' : 'bg-gray-200'}`}></div>
                              ))}
                            </div>
                            <span class="text-lg font-serif font-bold text-foreground">{item.tripadvisorRating}</span>
                          </div>
                        </div>
                      )}
                    </div>
                  </div>
                )}

                {/* Info Items */}
                <div class="space-y-8">
                  <div class="flex items-center justify-between">
                    <h4 class="text-[10px] font-bold uppercase tracking-[0.2em] text-primary">Practical Details</h4>
                    <div class="h-px flex-1 bg-primary/10 ml-4"></div>
                  </div>

                  <div class="space-y-6">
                    {item.priceRange && (
                      <div class="flex gap-4 group/info">
                        <div class="w-10 h-10 rounded-full bg-secondary flex items-center justify-center flex-shrink-0 group-hover/info:bg-primary/10 transition-colors">
                          <span class="text-primary font-bold text-lg">{item.priceRange}</span>
                        </div>
                        <div class="flex-1 min-w-0">
                          <div class="text-[10px] font-bold uppercase tracking-widest text-muted-foreground mb-1">Price Range</div>
                          <div class="text-sm font-medium text-foreground leading-relaxed">{item.category}</div>
                        </div>
                      </div>
                    )}

                    {item.category && (
                      <div class="flex gap-4 group/info">
                        <div class="w-10 h-10 rounded-full bg-secondary flex items-center justify-center flex-shrink-0 group-hover/info:bg-primary/10 transition-colors">
                          <Home className="w-5 h-5 text-primary" />
                        </div>
                        <div class="flex-1 min-w-0">
                          <div class="text-[10px] font-bold uppercase tracking-widest text-muted-foreground mb-1">Type</div>
                          <div class="text-sm font-medium text-foreground leading-relaxed">{item.category}</div>
                        </div>
                      </div>
                    )}

                    {item.practicalInfo && (
                      <div class="flex gap-4 group/info">
                        <div class="w-10 h-10 rounded-full bg-secondary flex items-center justify-center flex-shrink-0 group-hover/info:bg-primary/10 transition-colors">
                          <Info className="w-5 h-5 text-primary" />
                        </div>
                        <div class="flex-1 min-w-0">
                          <div class="text-[10px] font-bold uppercase tracking-widest text-muted-foreground mb-1">Notes</div>
                          <div class="text-sm font-medium text-foreground leading-relaxed">{item.practicalInfo}</div>
                        </div>
                      </div>
                    )}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </article>
      </div>
    ))}
  </div>
</section>

<style>
  .font-serif {
    letter-spacing: -0.02em;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  article {
    animation: fadeInUp 0.8s ease-out;
    animation-fill-mode: both;
  }
</style>
