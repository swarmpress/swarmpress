---
import { Search, ArrowRight, Clock, User, ChevronRight } from 'lucide-react';

interface Story {
  id: number;
  slug: string;
  title: string;
  excerpt: string;
  author: string;
  date: string;
  readTime: string;
  category: string;
  image: string;
  isLead?: boolean;
}

interface Props {
  stories: Story[];
  categories?: string[];
  introTitle?: string;
  introSubtitle?: string;
  newsletterTitle?: string;
  newsletterSubtitle?: string;
  locale?: string;
}

const {
  stories = [],
  categories = ["All Stories", "Guides", "Food & Drink", "Culture", "Photography", "Hotels"],
  introTitle = "Slow Journalism for a Fast-Moving Coastline.",
  introSubtitle = "We don't just list places; we tell their stories. From the salt-crusted traditions of the local fishermen to the quietest corners of the high trails, welcome to our curated chronicle of life in the five villages.",
  newsletterTitle = "Get the Dispatch in Your Inbox.",
  newsletterSubtitle = "Join 15,000+ lovers of the Italian Riviera. No spam, just curated stories, local secrets, and seasonal guides delivered once a month.",
  locale = 'en'
} = Astro.props;

const leadStory = stories.find(s => s.isLead) || stories[0];
const otherStories = stories.filter(s => s !== leadStory);
---

<!-- Hero Section -->
<section class="relative h-[80vh] min-h-[600px] flex items-center overflow-hidden bg-black">
  <div class="absolute inset-0">
    <img
      src={leadStory?.image}
      alt={leadStory?.title}
      class="w-full h-full object-cover opacity-60 transition-transform duration-[10s] hover:scale-110"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black via-black/20 to-transparent"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl">
      <div class="inline-flex items-center gap-3 px-3 py-1 rounded-full bg-primary/20 backdrop-blur-md border border-primary/30 text-white text-[10px] font-bold uppercase tracking-[0.3em] mb-8">
        <span class="w-2 h-2 rounded-full bg-primary animate-pulse"></span>
        Featured Story
      </div>
      <h1 class="font-serif text-5xl md:text-8xl font-bold text-white mb-8 leading-[0.9] tracking-tighter">
        {leadStory?.title}
      </h1>
      <p class="text-white/80 text-xl md:text-2xl font-light leading-relaxed max-w-2xl mb-12 font-serif italic">
        "{leadStory?.excerpt}"
      </p>
      <div class="flex flex-wrap items-center gap-8">
        <a href={`/${locale}/blog/${leadStory?.slug}`} class="group inline-flex items-center gap-3 bg-white text-black px-8 py-4 rounded-full font-bold text-sm uppercase tracking-widest hover:bg-primary hover:text-white transition-all duration-300">
          Read the Story
          <ArrowRight className="w-4 h-4 transition-transform group-hover:translate-x-1" />
        </a>
        <div class="flex items-center gap-4 text-white/60 text-sm font-medium tracking-widest uppercase">
          <span class="flex items-center gap-2"><User className="w-4 h-4" /> {leadStory?.author}</span>
          <span class="w-1 h-1 rounded-full bg-white/20"></span>
          <span class="flex items-center gap-2"><Clock className="w-4 h-4" /> {leadStory?.readTime}</span>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Editorial Intro -->
<section class="py-24 bg-white border-b border-border/40 relative overflow-hidden">
  <div class="container mx-auto px-4 relative">
    <div class="max-w-4xl mx-auto text-center space-y-12">
      <div class="inline-flex items-center gap-4">
        <div class="h-px w-12 bg-primary/30"></div>
        <span class="text-[10px] font-bold uppercase tracking-[0.5em] text-primary">The Dispatch</span>
        <div class="h-px w-12 bg-primary/30"></div>
      </div>

      <h2 class="font-serif text-4xl md:text-6xl font-bold text-foreground leading-tight" set:html={introTitle.replace(/\n/g, '<br/>')} />

      <p class="font-serif text-xl md:text-2xl text-muted-foreground leading-relaxed italic max-w-3xl mx-auto">
        {introSubtitle}
      </p>

      <div class="pt-8">
        <div class="w-16 h-px bg-border mx-auto"></div>
      </div>
    </div>
  </div>
</section>

<!-- Categories & Search -->
<div class="sticky top-0 z-40 bg-white/80 backdrop-blur-xl border-b border-border/40">
  <div class="container mx-auto px-4 py-4">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <div class="flex items-center gap-2 overflow-x-auto pb-2 md:pb-0 no-scrollbar w-full md:w-auto">
        {categories.map((cat, i) => (
          <button class={`px-5 py-2 rounded-full text-[10px] font-bold uppercase tracking-widest whitespace-nowrap transition-all ${i === 0 ? 'bg-primary text-white shadow-lg shadow-primary/20' : 'bg-secondary/50 text-muted-foreground hover:bg-secondary hover:text-foreground'}`}>
            {cat}
          </button>
        ))}
      </div>

      <div class="relative w-full md:w-64">
        <Search className="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-muted-foreground" />
        <input
          type="text"
          placeholder="Search stories..."
          class="w-full pl-12 pr-4 py-2.5 rounded-full bg-secondary/30 border border-transparent focus:border-primary/20 focus:bg-white transition-all text-sm outline-none"
        />
      </div>
    </div>
  </div>
</div>

<!-- Stories Grid -->
<section class="py-24 bg-white">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-12 gap-y-24">
      {otherStories.map((story) => (
        <a href={`/${locale}/blog/${story.slug}`} class="group block space-y-8">
          <div class="relative aspect-[4/5] overflow-hidden rounded-2xl shadow-2xl shadow-black/5">
            <img
              src={story.image}
              alt={story.title}
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="absolute bottom-8 left-8 right-8 translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500">
              <span class="inline-flex items-center gap-2 text-white text-[10px] font-bold uppercase tracking-widest">
                Read Story <ArrowRight className="w-3 h-3" />
              </span>
            </div>
            <div class="absolute top-6 left-6">
              <span class="px-3 py-1 rounded-full bg-white/90 backdrop-blur-sm text-black text-[9px] font-bold uppercase tracking-widest shadow-sm">
                {story.category}
              </span>
            </div>
          </div>

          <div class="space-y-4">
            <div class="flex items-center gap-3 text-[10px] font-bold uppercase tracking-widest text-primary">
              <span>{story.date}</span>
              <span class="w-1 h-1 rounded-full bg-primary/30"></span>
              <span>{story.readTime}</span>
            </div>
            <h3 class="font-serif text-3xl font-bold text-foreground leading-tight group-hover:text-primary transition-colors">
              {story.title}
            </h3>
            <p class="text-muted-foreground leading-relaxed line-clamp-3 font-serif italic text-lg">
              "{story.excerpt}"
            </p>
            <div class="flex items-center gap-3 pt-4">
              <div class="w-8 h-8 rounded-full bg-secondary overflow-hidden ring-2 ring-secondary">
                <img src={`https://api.dicebear.com/7.x/avataaars/svg?seed=${story.author}`} alt={story.author} />
              </div>
              <span class="text-xs font-bold uppercase tracking-widest text-foreground">{story.author}</span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<!-- Newsletter Section -->
<section class="py-32 bg-secondary/30 border-t border-border/40 overflow-hidden relative">
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto text-center space-y-12">
      <div class="inline-flex items-center gap-4">
        <div class="h-px w-12 bg-primary/30"></div>
        <span class="text-[10px] font-bold uppercase tracking-[0.5em] text-primary">Stay Connected</span>
        <div class="h-px w-12 bg-primary/30"></div>
      </div>

      <h2 class="font-serif text-4xl md:text-6xl font-bold text-foreground leading-tight" set:html={newsletterTitle.replace(/\n/g, '<br/>')} />

      <p class="text-xl text-muted-foreground leading-relaxed max-w-2xl mx-auto font-serif italic">
        {newsletterSubtitle}
      </p>

      <form class="flex flex-col md:flex-row gap-4 max-w-2xl mx-auto pt-8">
        <input
          type="email"
          placeholder="your@email.com"
          class="flex-1 px-8 py-5 rounded-full bg-white border border-border focus:border-primary/30 outline-none text-lg transition-all shadow-xl shadow-black/5"
        />
        <button class="px-10 py-5 rounded-full bg-primary text-white font-bold uppercase tracking-[0.2em] text-sm hover:bg-primary/90 transition-all shadow-xl shadow-primary/20">
          Subscribe
        </button>
      </form>

      <p class="text-[10px] text-muted-foreground uppercase tracking-widest">
        By subscribing, you agree to our Privacy Policy and Terms of Service.
      </p>
    </div>
  </div>
</section>

<style>
  .font-serif {
    letter-spacing: -0.02em;
  }

  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }
  .no-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>
