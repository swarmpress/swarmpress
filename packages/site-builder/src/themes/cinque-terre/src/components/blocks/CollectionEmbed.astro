---
/**
 * CollectionEmbed Block
 *
 * Renders a grid/list of collection items (restaurants, accommodations, etc.)
 * with customizable display options
 *
 * Used for embedding curated item lists in editorial pages
 */
import { MapPin, ArrowRight } from 'lucide-react';
import { COLLECTIONS_DIR } from '../../config/content-paths';
import * as fs from 'node:fs';
import * as path from 'node:path';

type LocalizedText = string | { en?: string; de?: string; fr?: string; it?: string };

interface CollectionItemRef {
  slug: string;
  title?: LocalizedText;
  summary?: LocalizedText;
  url?: string;
  village?: string;
  image?: string;
  data?: Record<string, unknown>;
}

interface DisplayOptions {
  layout?: 'grid' | 'list' | 'carousel';
  columns?: 2 | 3 | 4;
  showImage?: boolean;
  showSummary?: boolean;
  imageAspect?: 'square' | 'landscape' | 'portrait';
}

interface Props {
  collectionType: string;
  heading?: LocalizedText;
  headingLevel?: 1 | 2 | 3 | 4;
  items?: CollectionItemRef[];
  display?: DisplayOptions;
  showViewAll?: boolean;
  viewAllUrl?: string;
  locale?: string;
}

const {
  collectionType,
  heading,
  headingLevel = 2,
  items: itemRefs = [],
  display = {},
  showViewAll = false,
  viewAllUrl = '',
  locale = 'en'
} = Astro.props;

// Helper to get localized text
function getText(value: LocalizedText | undefined, lang: string): string {
  if (!value) return '';
  if (typeof value === 'string') return value;
  return value[lang as keyof typeof value] || value.en || Object.values(value)[0] || '';
}

// Load full collection item data by slug
async function loadItemData(type: string, slug: string): Promise<Record<string, unknown> | null> {
  const collectionDir = path.join(COLLECTIONS_DIR, type);

  if (!fs.existsSync(collectionDir)) {
    return null;
  }

  // Read collection files
  const files = fs.readdirSync(collectionDir).filter(f => f.endsWith('.json') && !f.startsWith('_'));

  for (const file of files) {
    const filePath = path.join(collectionDir, file);
    try {
      const content = JSON.parse(fs.readFileSync(filePath, 'utf-8'));
      const itemsArray = Array.isArray(content) ? content : (content.items || [content]);

      const item = itemsArray.find((i: { slug?: string }) => i.slug === slug);
      if (item) {
        return item;
      }
    } catch (e) {
      console.error(`Error loading ${filePath}:`, e);
    }
  }

  return null;
}

// Enrich item refs with collection data
const enrichedItems = await Promise.all(
  itemRefs.map(async (ref) => {
    const collectionData = await loadItemData(collectionType, ref.slug);

    // Merge collection data with ref data (ref takes precedence for display)
    const name = getText(ref.title, locale) ||
                 getText(collectionData?.name as LocalizedText, locale) ||
                 ref.slug;

    const details = collectionData?.details as Record<string, unknown> | undefined;
    const summary = getText(ref.summary, locale) ||
                    getText(details?.teaser as LocalizedText | undefined, locale) ||
                    getText(collectionData?.intro as LocalizedText | undefined, locale) || '';

    const image = ref.image ||
                  (collectionData?.images as Array<{ url: string }>)?.[0]?.url ||
                  (collectionData?.image as string) || '';

    const village = ref.village ||
                    getText(collectionData?.village as LocalizedText, locale) || '';

    return {
      slug: ref.slug,
      name,
      summary,
      image,
      village,
      url: ref.url || `/${collectionType}/${ref.slug}`,
      data: ref.data || {},
    };
  })
);

// Display options with defaults
const {
  layout = 'grid',
  columns = 3,
  showImage = true,
  showSummary = true,
  imageAspect = 'landscape'
} = display;

const headingText = getText(heading, locale);

// Grid column classes
const gridCols = {
  2: 'md:grid-cols-2',
  3: 'md:grid-cols-2 lg:grid-cols-3',
  4: 'md:grid-cols-2 lg:grid-cols-4',
}[columns] || 'md:grid-cols-3';

// Aspect ratio classes
const aspectClass = {
  square: 'aspect-square',
  landscape: 'aspect-[16/10]',
  portrait: 'aspect-[3/4]',
}[imageAspect] || 'aspect-[16/10]';

// Dynamic heading tag
const HeadingTag = `h${headingLevel}` as 'h1' | 'h2' | 'h3' | 'h4';
---

<section class="py-16 container mx-auto px-4">
  {headingText && (
    <div class="flex items-center justify-between mb-12">
      <HeadingTag class="font-serif text-3xl md:text-4xl font-bold text-foreground">
        {headingText}
      </HeadingTag>
      {showViewAll && viewAllUrl && (
        <a
          href={viewAllUrl}
          class="inline-flex items-center gap-2 text-primary font-medium hover:underline"
        >
          View All
          <ArrowRight className="w-4 h-4" />
        </a>
      )}
    </div>
  )}

  {layout === 'grid' && (
    <div class={`grid grid-cols-1 ${gridCols} gap-8`}>
      {enrichedItems.map((item) => (
        <a
          href={item.url}
          class="group block bg-card rounded-xl overflow-hidden border border-border hover:shadow-lg transition-shadow"
        >
          {showImage && item.image && (
            <div class={`${aspectClass} overflow-hidden`}>
              <img
                src={item.image}
                alt={item.name}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
              />
            </div>
          )}
          <div class="p-6">
            {item.village && (
              <div class="flex items-center gap-1.5 mb-2 text-muted-foreground">
                <MapPin className="w-3.5 h-3.5" />
                <span class="text-xs font-medium uppercase tracking-wide">{item.village}</span>
              </div>
            )}
            <h3 class="font-serif text-xl font-bold text-foreground group-hover:text-primary transition-colors mb-2">
              {item.name}
            </h3>
            {showSummary && item.summary && (
              <p class="text-sm text-muted-foreground line-clamp-2">
                {item.summary}
              </p>
            )}
          </div>
        </a>
      ))}
    </div>
  )}

  {layout === 'list' && (
    <div class="space-y-6">
      {enrichedItems.map((item) => (
        <a
          href={item.url}
          class="group flex gap-6 bg-card rounded-xl overflow-hidden border border-border hover:shadow-lg transition-shadow p-4"
        >
          {showImage && item.image && (
            <div class="w-32 h-24 flex-shrink-0 rounded-lg overflow-hidden">
              <img
                src={item.image}
                alt={item.name}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
              />
            </div>
          )}
          <div class="flex-1 min-w-0">
            {item.village && (
              <div class="flex items-center gap-1.5 mb-1 text-muted-foreground">
                <MapPin className="w-3 h-3" />
                <span class="text-xs font-medium uppercase tracking-wide">{item.village}</span>
              </div>
            )}
            <h3 class="font-serif text-lg font-bold text-foreground group-hover:text-primary transition-colors">
              {item.name}
            </h3>
            {showSummary && item.summary && (
              <p class="text-sm text-muted-foreground line-clamp-1 mt-1">
                {item.summary}
              </p>
            )}
          </div>
        </a>
      ))}
    </div>
  )}

  {/* Bottom View All link for mobile */}
  {showViewAll && viewAllUrl && (
    <div class="mt-8 text-center md:hidden">
      <a
        href={viewAllUrl}
        class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-white rounded-full font-medium hover:bg-primary/90 transition-colors"
      >
        View All {headingText || collectionType}
        <ArrowRight className="w-4 h-4" />
      </a>
    </div>
  )}
</section>
