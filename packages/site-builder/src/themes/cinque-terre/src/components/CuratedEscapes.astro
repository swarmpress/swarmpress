---
const escapes = [
    {
        name: "The Romantic Escape",
        image: "https://images.unsplash.com/photo-1516483638261-f4dbaf036963?q=80&w=2574&auto=format&fit=crop"
    },
    {
        name: "Family-Friendly Weekend",
        image: "https://images.unsplash.com/photo-1534445867742-43195f401b6c?q=80&w=2670&auto=format&fit=crop"
    },
    {
        name: "Hikersâ€™ Edition",
        image: "https://images.unsplash.com/photo-1596394516093-501ba68a0ba6?q=80&w=2670&auto=format&fit=crop"
    },
    {
        name: "Food & Wine Weekend",
        image: "https://images.unsplash.com/photo-1551183053-bf91a1d81141?q=80&w=2632&auto=format&fit=crop"
    }
];
---

<section class="py-16 bg-secondary/10">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <span class="text-sm font-semibold text-primary uppercase tracking-wider">Collections</span>
            <h2 class="font-serif text-3xl md:text-4xl font-bold mt-2">Curated Escapes</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {escapes.map(escape => (
                <div class="group relative aspect-[16/9] overflow-hidden rounded-xl cursor-pointer">
                    <img src={escape.image} alt={escape.name} class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" />
                    <div class="absolute inset-0 bg-black/40 group-hover:bg-black/30 transition-colors"></div>
                    <div class="absolute inset-0 flex items-center justify-center">
                        <h3 class="font-serif text-3xl md:text-4xl font-bold text-white text-center px-4 drop-shadow-lg transform group-hover:-translate-y-2 transition-transform duration-300">{escape.name}</h3>
                    </div>
                    <div class="absolute bottom-8 left-0 right-0 text-center opacity-0 group-hover:opacity-100 transition-opacity duration-300 transform translate-y-2 group-hover:translate-y-0">
                        <span class="inline-block px-6 py-2 bg-white text-black text-sm font-bold rounded-full hover:bg-white/90 transition-colors">
                            View Collection
                        </span>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>
