---
import { Star } from 'lucide-react';

interface Props {
  googleRating: number;
  tripadvisorRating: number;
  label?: string;
}

const { googleRating, tripadvisorRating, label = "Traveler Reviews" } = Astro.props;
---

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <h4 class="text-[10px] font-bold uppercase tracking-[0.2em] text-primary">{label}</h4>
        <div class="h-px flex-1 bg-primary/10 ml-4"></div>
    </div>
    
    <div class="space-y-4">
        <!-- Google -->
        <div class="flex items-center justify-between group/review">
            <div class="flex items-center gap-3">
                <img 
                    src="https://upload.wikimedia.org/wikipedia/commons/2/2f/Google_2015_logo.svg" 
                    alt="Google" 
                    class="h-4 opacity-60 group-hover/review:opacity-100 transition-opacity grayscale brightness-0 dark:invert"
                />
            </div>
            <div class="flex items-center gap-2">
                <div class="flex items-center gap-0.5">
                    {[...Array(5)].map((_, i) => (
                        <Star className={`w-3 h-3 ${i < Math.floor(googleRating) ? 'fill-amber-400 text-amber-400' : 'fill-gray-200 text-gray-200'}`} />
                    ))}
                </div>
                <span class="text-lg font-serif font-bold text-foreground">{googleRating}</span>
            </div>
        </div>

        <!-- TripAdvisor -->
        <div class="flex items-center justify-between group/review">
            <div class="flex items-center gap-3">
                <img 
                    src="https://static.tacdn.com/img2/brand_refresh_2025/logos/wordmark.svg" 
                    alt="TripAdvisor" 
                    class="h-4 opacity-60 group-hover/review:opacity-100 transition-opacity grayscale brightness-0 dark:invert"
                />
            </div>
            <div class="flex items-center gap-2">
                <div class="flex items-center gap-0.5">
                    {[...Array(5)].map((_, i) => (
                        <svg className={`w-3 h-3 ${i < Math.floor(tripadvisorRating) ? 'fill-[#34e0a1]' : 'fill-gray-200'}`} viewBox="0 0 24 24">
                            <circle cx="12" cy="12" r="10" fill="currentColor"/>
                        </svg>
                    ))}
                </div>
                <span class="text-lg font-serif font-bold text-foreground">{tripadvisorRating}</span>
            </div>
        </div>
    </div>
</div>
