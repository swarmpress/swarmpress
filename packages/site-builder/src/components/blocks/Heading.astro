---
/**
 * Heading Block Component
 * Renders heading blocks (h1-h6)
 */
export interface Props {
  level: 1 | 2 | 3 | 4 | 5 | 6
  text: string
  id?: string
  className?: string
}

const { level, text, id, className = '' } = Astro.props
const Tag = `h${level}` as any
const headingId = id || text.toLowerCase().replace(/[^a-z0-9]+/g, '-')
---

<Tag id={headingId} class={`block-heading heading-${level} ${className}`}>
  {text}
</Tag>

<style>
  .block-heading {
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-weight: 700;
    line-height: 1.2;
  }

  .heading-1 {
    font-size: 2.5rem;
    margin-top: 0;
  }

  .heading-2 {
    font-size: 2rem;
    border-bottom: 2px solid var(--color-border);
    padding-bottom: 0.5rem;
  }

  .heading-3 {
    font-size: 1.75rem;
  }

  .heading-4 {
    font-size: 1.5rem;
  }

  .heading-5 {
    font-size: 1.25rem;
  }

  .heading-6 {
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  @media (max-width: 768px) {
    .heading-1 { font-size: 2rem; }
    .heading-2 { font-size: 1.75rem; }
    .heading-3 { font-size: 1.5rem; }
  }
</style>
