---
/**
 * Quote Block Component
 * Renders a styled blockquote with optional author
 */
export interface Props {
  text: string
  author?: string
  role?: string
  className?: string
}

const { text, author, role, className = '' } = Astro.props
---

<blockquote class={`block-quote ${className}`}>
  <p class="quote-text">{text}</p>
  {(author || role) && (
    <footer class="quote-footer">
      {author && <cite class="quote-author">{author}</cite>}
      {role && <span class="quote-role">{role}</span>}
    </footer>
  )}
</blockquote>

<style>
  .block-quote {
    border-left: 4px solid var(--color-primary);
    padding: 1.5rem 2rem;
    margin: 2rem 0;
    background-color: var(--color-bg-alt);
    border-radius: 0 8px 8px 0;
  }

  .quote-text {
    font-size: 1.25rem;
    font-style: italic;
    line-height: 1.6;
    color: var(--color-text);
    margin-bottom: 1rem;
  }

  .quote-footer {
    font-style: normal;
    color: var(--color-text-light);
    font-size: 0.95rem;
  }

  .quote-author {
    font-weight: 600;
    font-style: normal;
  }

  .quote-role {
    margin-left: 0.5rem;
  }

  .quote-role::before {
    content: 'â€” ';
  }

  @media (max-width: 768px) {
    .block-quote {
      padding: 1rem 1.5rem;
    }

    .quote-text {
      font-size: 1.1rem;
    }
  }
</style>
