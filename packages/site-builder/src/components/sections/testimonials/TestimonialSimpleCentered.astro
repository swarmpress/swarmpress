---
/**
 * Testimonial Section - Simple Centered
 * A centered testimonial with logo, quote, and author info
 * Based on: tailwindcss-plus-components/marketing/sections/testimonials/simple_centered.html
 */

export interface Props {
  quote: string
  authorName: string
  authorRole?: string
  authorImage?: string
  companyLogo?: string
  companyLogoDark?: string
}

const {
  quote,
  authorName,
  authorRole,
  authorImage = 'https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80',
  companyLogo,
  companyLogoDark,
} = Astro.props
---

<section class="relative isolate overflow-hidden bg-white px-6 py-24 sm:py-32 lg:px-8 dark:bg-gray-900">
  <div class="absolute inset-0 -z-10 bg-[radial-gradient(45rem_50rem_at_top,var(--color-indigo-100),white)] opacity-20 dark:bg-[radial-gradient(45rem_50rem_at_top,var(--color-indigo-500),transparent)] dark:opacity-10"></div>
  <div class="absolute inset-y-0 right-1/2 -z-10 mr-16 w-[200%] origin-bottom-left skew-x-[-30deg] bg-white shadow-xl ring-1 shadow-indigo-600/10 ring-indigo-50 sm:mr-28 lg:mr-0 xl:mr-16 xl:origin-center dark:bg-gray-900 dark:shadow-indigo-500/5 dark:ring-white/5"></div>
  <div class="mx-auto max-w-2xl lg:max-w-4xl">
    {companyLogo && (
      <>
        <img src={companyLogo} alt="" class="mx-auto h-12 dark:hidden" />
        {companyLogoDark && <img src={companyLogoDark} alt="" class="mx-auto h-12 not-dark:hidden" />}
      </>
    )}
    <figure class="mt-10">
      <blockquote class="text-center text-xl/8 font-semibold text-gray-900 sm:text-2xl/9 dark:text-white">
        <p>"{quote}"</p>
      </blockquote>
      <figcaption class="mt-10">
        <img src={authorImage} alt="" class="mx-auto size-10 rounded-full" />
        <div class="mt-4 flex items-center justify-center space-x-3 text-base">
          <div class="font-semibold text-gray-900 dark:text-white">{authorName}</div>
          {authorRole && (
            <>
              <svg viewBox="0 0 2 2" width="3" height="3" aria-hidden="true" class="fill-gray-900 dark:fill-white">
                <circle r="1" cx="1" cy="1" />
              </svg>
              <div class="text-gray-600 dark:text-gray-400">{authorRole}</div>
            </>
          )}
        </div>
      </figcaption>
    </figure>
  </div>
</section>
