---
/**
 * Testimonial Section - With Background Image
 * A testimonial on a dark panel with background image
 * Based on: tailwindcss-plus-components/marketing/sections/testimonials/with_background_image.html
 */

export interface Props {
  quote: string
  authorName: string
  authorRole?: string
  companyLogo?: string
  companyLogoDark?: string
  backgroundImage?: string
}

const {
  quote,
  authorName,
  authorRole,
  companyLogo,
  companyLogoDark,
  backgroundImage = 'https://images.unsplash.com/photo-1601381718415-a05fb0a261f3?ixid=MXwxMjA3fDB8MHxwcm9maWxlLXBhZ2V8ODl8fHxlbnwwfHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1216&q=80',
} = Astro.props
---

<div class="bg-white py-16 sm:py-24 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div class="relative overflow-hidden bg-gray-900 px-6 py-20 shadow-xl sm:rounded-3xl sm:px-10 sm:py-24 md:px-12 lg:px-20 dark:bg-black dark:shadow-none dark:after:pointer-events-none dark:after:absolute dark:after:inset-0 dark:after:ring-1 dark:after:ring-inset dark:after:ring-white/10 dark:after:sm:rounded-3xl">
      <img src={backgroundImage} alt="" class="absolute inset-0 size-full object-cover brightness-150 saturate-0" />
      <div class="absolute inset-0 bg-gray-900/90 mix-blend-multiply"></div>
      <div aria-hidden="true" class="absolute -top-56 -left-80 transform-gpu blur-3xl">
        <div style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)" class="aspect-[1097/845] w-[68.5625rem] bg-gradient-to-r from-[#ff4694] to-[#776fff] opacity-[0.45] dark:opacity-[0.30]"></div>
      </div>
      <div aria-hidden="true" class="hidden md:absolute md:bottom-16 md:left-[50rem] md:block md:transform-gpu md:blur-3xl">
        <div style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)" class="aspect-[1097/845] w-[68.5625rem] bg-gradient-to-r from-[#ff4694] to-[#776fff] opacity-25 dark:opacity-20"></div>
      </div>
      <div class="relative mx-auto max-w-2xl lg:mx-0">
        {companyLogo && (
          <>
            <img src={companyLogo} alt="" class="h-12 w-auto dark:hidden" />
            {companyLogoDark ? (
              <img src={companyLogoDark} alt="" class="h-12 w-auto not-dark:hidden" />
            ) : (
              <img src={companyLogo} alt="" class="h-12 w-auto not-dark:hidden" />
            )}
          </>
        )}
        <figure>
          <blockquote class="mt-6 text-lg font-semibold text-white sm:text-xl/8">
            <p>"{quote}"</p>
          </blockquote>
          <figcaption class="mt-6 text-base text-white dark:text-gray-200">
            <div class="font-semibold">{authorName}</div>
            {authorRole && <div class="mt-1">{authorRole}</div>}
          </figcaption>
        </figure>
      </div>
    </div>
  </div>
</div>
