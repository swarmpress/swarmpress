---
/**
 * CTA Section - Simple Centered with Gradient
 * A centered CTA with a gradient background decoration
 * Based on: tailwindcss-plus-components/marketing/sections/cta-sections/simple_centered_with_gradient.html
 */

export interface Props {
  title: string
  description?: string
  primaryButtonText?: string
  primaryButtonUrl?: string
  secondaryButtonText?: string
  secondaryButtonUrl?: string
}

const {
  title,
  description,
  primaryButtonText = 'Get started',
  primaryButtonUrl = '#',
  secondaryButtonText = 'Learn more',
  secondaryButtonUrl = '#',
} = Astro.props
---

<div class="relative isolate overflow-hidden bg-white dark:bg-gray-900">
  <div class="px-6 py-24 sm:py-32 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-4xl font-semibold tracking-tight text-balance text-gray-900 sm:text-5xl dark:text-white">{title}</h2>
      {description && (
        <p class="mx-auto mt-6 max-w-xl text-lg/8 text-pretty text-gray-600 dark:text-gray-300">{description}</p>
      )}
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a href={primaryButtonUrl} class="rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-gray-900 shadow-xs hover:bg-gray-100 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white dark:bg-white/15 dark:text-white dark:shadow-none dark:inset-ring dark:inset-ring-white/5 dark:hover:bg-white/20 dark:focus-visible:outline-white">{primaryButtonText}</a>
        <a href={secondaryButtonUrl} class="text-sm/6 font-semibold text-gray-900 hover:text-gray-600 dark:text-white dark:hover:text-gray-300">{secondaryButtonText} <span aria-hidden="true">â†’</span></a>
      </div>
    </div>
  </div>
  <svg viewBox="0 0 1024 1024" aria-hidden="true" class="absolute top-1/2 left-1/2 -z-10 size-256 -translate-x-1/2 mask-[radial-gradient(closest-side,white,transparent)]">
    <circle r="512" cx="512" cy="512" fill="url(#cta-gradient-bg)" fill-opacity="0.7" />
    <defs>
      <radialGradient id="cta-gradient-bg">
        <stop stop-color="#7775D6" />
        <stop offset="1" stop-color="#E935C1" />
      </radialGradient>
    </defs>
  </svg>
</div>
