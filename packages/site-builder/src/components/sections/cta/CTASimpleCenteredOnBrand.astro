---
/**
 * CTA Section - Simple Centered on Brand
 * A centered CTA on a brand-colored (indigo) background
 * Based on: tailwindcss-plus-components/marketing/sections/cta-sections/simple_centered_on_brand.html
 */

export interface Props {
  title: string
  description?: string
  primaryButtonText?: string
  primaryButtonUrl?: string
  secondaryButtonText?: string
  secondaryButtonUrl?: string
}

const {
  title,
  description,
  primaryButtonText = 'Get started',
  primaryButtonUrl = '#',
  secondaryButtonText = 'Learn more',
  secondaryButtonUrl = '#',
} = Astro.props
---

<div class="bg-indigo-700">
  <div class="px-6 py-24 sm:py-32 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-4xl font-semibold tracking-tight text-balance text-white sm:text-5xl">{title}</h2>
      {description && (
        <p class="mx-auto mt-6 max-w-xl text-lg/8 text-pretty text-indigo-200">{description}</p>
      )}
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a href={primaryButtonUrl} class="rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-indigo-600 shadow-xs hover:bg-indigo-50 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white dark:shadow-none">{primaryButtonText}</a>
        <a href={secondaryButtonUrl} class="text-sm/6 font-semibold text-white">
          {secondaryButtonText}
          <span aria-hidden="true">â†’</span>
        </a>
      </div>
    </div>
  </div>
</div>
