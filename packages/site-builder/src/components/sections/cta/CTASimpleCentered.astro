---
/**
 * CTA Section - Simple Centered
 * A centered CTA with title, description, and two buttons
 * Based on: tailwindcss-plus-components/marketing/sections/cta-sections/simple_centered.html
 */

export interface Props {
  title: string
  description?: string
  primaryButtonText?: string
  primaryButtonUrl?: string
  secondaryButtonText?: string
  secondaryButtonUrl?: string
}

const {
  title,
  description,
  primaryButtonText = 'Get started',
  primaryButtonUrl = '#',
  secondaryButtonText = 'Learn more',
  secondaryButtonUrl = '#',
} = Astro.props
---

<div class="bg-white dark:bg-gray-900">
  <div class="px-6 py-24 sm:py-32 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-4xl font-semibold tracking-tight text-balance text-gray-900 sm:text-5xl dark:text-white">{title}</h2>
      {description && (
        <p class="mx-auto mt-6 max-w-xl text-lg/8 text-pretty text-gray-600 dark:text-gray-300">{description}</p>
      )}
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a href={primaryButtonUrl} class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:shadow-none dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-500">{primaryButtonText}</a>
        <a href={secondaryButtonUrl} class="text-sm/6 font-semibold text-gray-900 dark:text-white">{secondaryButtonText} <span aria-hidden="true">â†’</span></a>
      </div>
    </div>
  </div>
</div>
