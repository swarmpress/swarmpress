---
/**
 * Footer Section - 4 Column Simple
 * A classic 4-column footer with logo and link columns
 * Based on: tailwindcss-plus-components/marketing/sections/footers/4_column_simple.html
 */

export interface NavLink {
  label: string
  url: string
  external?: boolean
}

export interface FooterColumn {
  title: string
  links: NavLink[]
}

export interface Props {
  logo?: string
  logoDark?: string
  companyName?: string
  columns: FooterColumn[]
  copyright?: string
}

const {
  logo,
  logoDark,
  companyName = 'Company',
  columns = [],
  copyright,
} = Astro.props

const currentYear = new Date().getFullYear()
const copyrightText = copyright || `Â© ${currentYear} ${companyName}. All rights reserved.`
---

<footer class="bg-white dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 py-16 sm:py-24 lg:px-8 lg:py-32">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
      {/* Logo */}
      {logo && (
        <div>
          <img src={logo} alt={companyName} class="h-9 dark:hidden" />
          {logoDark && <img src={logoDark} alt={companyName} class="h-9 hidden dark:block" />}
        </div>
      )}

      {/* Link columns */}
      <div class="mt-16 grid grid-cols-2 gap-8 xl:col-span-2 xl:mt-0">
        {columns.length > 0 && (
          <>
            <div class="md:grid md:grid-cols-2 md:gap-8">
              {columns.slice(0, 2).map((column) => (
                <div class={columns.indexOf(column) === 1 ? 'mt-10 md:mt-0' : ''}>
                  <h3 class="text-sm/6 font-semibold text-gray-900 dark:text-white">
                    {column.title}
                  </h3>
                  <ul role="list" class="mt-6 space-y-4">
                    {column.links.map((link) => (
                      <li>
                        <a
                          href={link.url}
                          target={link.external ? '_blank' : undefined}
                          rel={link.external ? 'noopener noreferrer' : undefined}
                          class="text-sm/6 text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
                        >
                          {link.label}
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
            {columns.length > 2 && (
              <div class="md:grid md:grid-cols-2 md:gap-8">
                {columns.slice(2, 4).map((column, idx) => (
                  <div class={idx === 1 ? 'mt-10 md:mt-0' : ''}>
                    <h3 class="text-sm/6 font-semibold text-gray-900 dark:text-white">
                      {column.title}
                    </h3>
                    <ul role="list" class="mt-6 space-y-4">
                      {column.links.map((link) => (
                        <li>
                          <a
                            href={link.url}
                            target={link.external ? '_blank' : undefined}
                            rel={link.external ? 'noopener noreferrer' : undefined}
                            class="text-sm/6 text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
                          >
                            {link.label}
                          </a>
                        </li>
                      ))}
                    </ul>
                  </div>
                ))}
              </div>
            )}
          </>
        )}
      </div>
    </div>

    {/* Copyright */}
    <div class="mt-16 border-t border-gray-900/10 pt-8 dark:border-white/10">
      <p class="text-sm/6 text-gray-600 dark:text-gray-400">{copyrightText}</p>
    </div>
  </div>
</footer>
