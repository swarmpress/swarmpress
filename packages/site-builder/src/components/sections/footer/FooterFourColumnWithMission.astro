<footer class="bg-white dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 pt-16 pb-8 sm:pt-24 lg:px-8 lg:pt-32">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
      {/* Logo, mission, and social links */}
      <div class="space-y-8">
        {logo && (
          <>
            <img src={logo} alt={companyName} class="h-9 dark:hidden" />
            {logoDark && <img src={logoDark} alt={companyName} class="h-9 hidden dark:block" />}
          </>
        )}
        <p class="text-sm/6 text-balance text-gray-600 dark:text-gray-400">{mission}</p>

        {socialLinks.length > 0 && (
          <div class="flex gap-x-6">
            {socialLinks.map((social) => (
              <a
                href={social.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-600 hover:text-gray-800 dark:text-gray-400 dark:hover:text-gray-300"
              >
                <span class="sr-only">{social.platform}</span>
                <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true" class="size-6">
                  <Fragment set:html={socialIcons[social.platform] || ''} />
                </svg>
              </a>
            ))}
          </div>
        )}
      </div>

      {/* Link columns */}
      <div class="mt-16 grid grid-cols-2 gap-8 xl:col-span-2 xl:mt-0">
        {columns.length > 0 && (
          <>
            <div class="md:grid md:grid-cols-2 md:gap-8">
              {columns.slice(0, 2).map((column, idx) => (
                <div class={idx === 1 ? 'mt-10 md:mt-0' : ''}>
                  <h3 class="text-sm/6 font-semibold text-gray-900 dark:text-white">
                    {column.title}
                  </h3>
                  <ul role="list" class="mt-6 space-y-4">
                    {column.links.map((link) => (
                      <li>
                        <a
                          href={link.url}
                          target={link.external ? '_blank' : undefined}
                          rel={link.external ? 'noopener noreferrer' : undefined}
                          class="text-sm/6 text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-300"
                        >
                          {link.label}
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
            {columns.length > 2 && (
              <div class="md:grid md:grid-cols-2 md:gap-8">
                {columns.slice(2, 4).map((column, idx) => (
                  <div class={idx === 1 ? 'mt-10 md:mt-0' : ''}>
                    <h3 class="text-sm/6 font-semibold text-gray-900 dark:text-white">
                      {column.title}
                    </h3>
                    <ul role="list" class="mt-6 space-y-4">
                      {column.links.map((link) => (
                        <li>
                          <a
                            href={link.url}
                            target={link.external ? '_blank' : undefined}
                            rel={link.external ? 'noopener noreferrer' : undefined}
                            class="text-sm/6 text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-300"
                          >
                            {link.label}
                          </a>
                        </li>
                      ))}
                    </ul>
                  </div>
                ))}
              </div>
            )}
          </>
        )}
      </div>
    </div>

    {/* Copyright */}
    <div class="mt-16 border-t border-gray-900/10 pt-8 sm:mt-20 lg:mt-24 dark:border-white/10">
      <p class="text-sm/6 text-gray-600 dark:text-gray-400">{copyrightText}</p>
    </div>
  </div>
</footer>
