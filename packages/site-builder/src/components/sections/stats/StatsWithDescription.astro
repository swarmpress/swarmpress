---
/**
 * Stats Section - With Description
 * Stats with mission statement and description
 * Based on: tailwindcss-plus-components/marketing/sections/stats-sections/with_description.html
 */

export interface Stat {
  value: string
  label: string
}

export interface Props {
  heading?: string
  description?: string
  secondaryDescription?: string
  stats: Stat[]
}

const {
  heading = 'Our mission',
  description = 'Aliquet nec orci mattis amet quisque ullamcorper neque, nibh sem. At arcu, sit dui mi, nibh dui, diam eget aliquam. Quisque id at vitae feugiat egestas ac. Diam nulla orci at in viverra scelerisque eget. Eleifend egestas fringilla sapien.',
  secondaryDescription = 'Faucibus commodo massa rhoncus, volutpat. Dignissim sed eget risus enim. Mattis mauris semper sed amet vitae sed turpis id. Id dolor praesent donec est. Odio penatibus risus viverra tellus varius sit neque erat velit. Faucibus commodo massa rhoncus, volutpat. Dignissim sed eget risus enim. Mattis mauris semper sed amet vitae sed turpis id.',
  stats = [],
} = Astro.props
---

<div class="bg-white py-32 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-none">
      <h2 class="text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl dark:text-white">{heading}</h2>
      <div class="mt-6 flex flex-col gap-x-8 gap-y-20 lg:flex-row">
        <div class="lg:w-full lg:max-w-2xl lg:flex-auto">
          <p class="text-xl/8 text-gray-600 dark:text-gray-300">{description}</p>
          {secondaryDescription && (
            <p class="mt-10 max-w-xl text-base/7 text-gray-700 dark:text-gray-400">{secondaryDescription}</p>
          )}
        </div>
        <div class="lg:flex lg:flex-auto lg:justify-center">
          <dl class="w-64 space-y-8 xl:w-80">
            {stats.map((stat) => (
              <div class="flex flex-col-reverse gap-y-4">
                <dt class="text-base/7 text-gray-600 dark:text-gray-400">{stat.label}</dt>
                <dd class="text-5xl font-semibold tracking-tight text-gray-900 dark:text-white">{stat.value}</dd>
              </div>
            ))}
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>
