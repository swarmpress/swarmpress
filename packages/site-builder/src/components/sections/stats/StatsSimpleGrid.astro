---
/**
 * Stats Section - Simple Grid
 * Stats in a 4-column grid with heading
 * Based on: tailwindcss-plus-components/marketing/sections/stats-sections/simple_grid.html
 */

export interface Stat {
  value: string
  label: string
}

export interface Props {
  heading?: string
  description?: string
  stats: Stat[]
}

const {
  heading = 'Trusted by creators worldwide',
  description = 'Lorem ipsum dolor sit amet consect adipisicing possimus.',
  stats = [],
} = Astro.props
---

<div class="bg-white py-24 sm:py-32 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:max-w-none">
      <div class="text-center">
        <h2 class="text-4xl font-semibold tracking-tight text-balance text-gray-900 sm:text-5xl dark:text-white">{heading}</h2>
        <p class="mt-4 text-lg/8 text-gray-600 dark:text-gray-300">{description}</p>
      </div>
      <dl class="mt-16 grid grid-cols-1 gap-0.5 overflow-hidden rounded-2xl text-center sm:grid-cols-2 lg:grid-cols-4">
        {stats.map((stat) => (
          <div class="flex flex-col bg-gray-400/5 p-8 dark:bg-white/5">
            <dt class="text-sm/6 font-semibold text-gray-600 dark:text-gray-300">{stat.label}</dt>
            <dd class="order-first text-3xl font-semibold tracking-tight text-gray-900 dark:text-white">{stat.value}</dd>
          </div>
        ))}
      </dl>
    </div>
  </div>
</div>
