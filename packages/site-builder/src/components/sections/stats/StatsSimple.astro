---
/**
 * Stats Section - Simple
 * Simple centered stats grid
 * Based on: tailwindcss-plus-components/marketing/sections/stats-sections/simple.html
 */

export interface Stat {
  value: string
  label: string
}

export interface Props {
  stats: Stat[]
}

const { stats = [] } = Astro.props
---

<div class="bg-white py-24 sm:py-32 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <dl class="grid grid-cols-1 gap-x-8 gap-y-16 text-center lg:grid-cols-3">
      {stats.map((stat) => (
        <div class="mx-auto flex max-w-xs flex-col gap-y-4">
          <dt class="text-base/7 text-gray-600 dark:text-gray-400">{stat.label}</dt>
          <dd class="order-first text-3xl font-semibold tracking-tight text-gray-900 sm:text-5xl dark:text-white">{stat.value}</dd>
        </div>
      ))}
    </dl>
  </div>
</div>
