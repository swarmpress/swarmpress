---
/**
 * Content Section - With Testimonial and Stats
 * Content with large testimonial card and stats grid
 * Based on: tailwindcss-plus-components/marketing/sections/content-sections/with_testimonial_and_stats.html
 */

export interface Stat {
  label: string
  value: string
}

export interface Testimonial {
  quote: string
  author: string
  role: string
  logo?: string
  image?: string
}

export interface Props {
  eyebrow?: string
  title?: string
  content?: string
  contentSecondary?: string
  contentTertiary?: string
  testimonial?: Testimonial
  stats?: Stat[]
  linkText?: string
  linkUrl?: string
}

const {
  eyebrow = 'Company values',
  title = 'On a mission to empower remote teams',
  content = 'Faucibus commodo massa rhoncus, volutpat. Dignissim sed eget risus enim. Mattis mauris semper sed amet vitae sed turpis id.',
  contentSecondary = 'Et vitae blandit facilisi magna lacus commodo. Vitae sapien duis odio id et. Id blandit molestie auctor fermentum dignissim.',
  contentTertiary = 'Et vitae blandit facilisi magna lacus commodo. Vitae sapien duis odio id et. Id blandit molestie auctor fermentum dignissim.',
  testimonial = {
    quote: 'Amet amet eget scelerisque tellus sit neque faucibus non eleifend. Integer eu praesent at a. Ornare arcu gravida natoque erat et cursus tortor.',
    author: 'Judith Rogers',
    role: 'CEO at Workcation',
    logo: 'https://tailwindcss.com/plus-assets/img/logos/workcation-logo-white.svg',
    image: 'https://images.unsplash.com/photo-1630569267625-157f8f9d1a7e?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2669&q=80',
  },
  stats = [
    { label: 'Founded', value: '2021' },
    { label: 'Employees', value: '37' },
    { label: 'Countries', value: '12' },
    { label: 'Raised', value: '$25M' },
  ],
  linkText = 'Learn more about our company',
  linkUrl = '#',
} = Astro.props
---

<div class="bg-white py-24 sm:py-32 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto grid max-w-2xl grid-cols-1 items-start gap-x-8 gap-y-16 sm:gap-y-24 lg:mx-0 lg:max-w-none lg:grid-cols-2">
      <div class="lg:pr-4">
        <div class="relative overflow-hidden rounded-3xl bg-gray-900 px-6 pt-64 pb-9 shadow-2xl sm:px-12 lg:max-w-lg lg:px-8 lg:pb-8 xl:px-10 xl:pb-10 dark:bg-gray-800 dark:shadow-none dark:after:pointer-events-none dark:after:absolute dark:after:inset-0 dark:after:rounded-3xl dark:after:inset-ring dark:after:inset-ring-white/10">
          {testimonial.image && (
            <img src={testimonial.image} alt="" class="absolute inset-0 size-full rounded-3xl object-cover brightness-125 saturate-0" />
          )}
          <div class="absolute inset-0 bg-gray-900 mix-blend-multiply"></div>
          <figure class="relative isolate">
            {testimonial.logo && <img src={testimonial.logo} alt="" class="h-12 w-auto" />}
            <blockquote class="mt-6 text-xl/8 font-semibold text-white">
              <p>"{testimonial.quote}"</p>
            </blockquote>
            <figcaption class="mt-6 text-sm/6 text-gray-300">
              <strong class="font-semibold text-white">{testimonial.author},</strong> {testimonial.role}
            </figcaption>
          </figure>
        </div>
      </div>
      <div>
        <div class="text-base/7 text-gray-700 lg:max-w-lg dark:text-gray-400">
          <p class="text-base/7 font-semibold text-indigo-600 dark:text-indigo-400">{eyebrow}</p>
          <h1 class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl dark:text-white">{title}</h1>
          <div class="max-w-xl">
            <p class="mt-6">{content}</p>
            <p class="mt-8">{contentSecondary}</p>
            <p class="mt-8">{contentTertiary}</p>
          </div>
        </div>
        <dl class="mt-10 grid grid-cols-2 gap-8 border-t border-gray-900/10 pt-10 sm:grid-cols-4 dark:border-gray-800">
          {stats.map((stat) => (
            <div>
              <dt class="text-sm/6 font-semibold text-gray-600 dark:text-gray-400">{stat.label}</dt>
              <dd class="mt-2 text-3xl/10 font-bold tracking-tight text-gray-900 dark:text-white">{stat.value}</dd>
            </div>
          ))}
        </dl>
        <div class="mt-10 flex">
          <a href={linkUrl} class="text-base/7 font-semibold text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300">
            {linkText} <span aria-hidden="true">&rarr;</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
