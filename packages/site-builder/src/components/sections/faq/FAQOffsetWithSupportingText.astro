---
/**
 * FAQ Section - Offset with Supporting Text
 * Two-column layout with heading/support on left, FAQs on right
 * Based on: tailwindcss-plus-components/marketing/sections/faq-sections/offset_with_supporting_text.html
 */

export interface FAQItem {
  question: string
  answer: string
}

export interface Props {
  heading?: string
  description?: string
  supportLinkText?: string
  supportLinkUrl?: string
  items?: FAQItem[]
}

const {
  heading = 'Frequently asked questions',
  description = "Can't find the answer you're looking for? Reach out to our",
  supportLinkText = 'customer support',
  supportLinkUrl = '#',
  items = [
    {
      question: 'How do you make holy water?',
      answer: 'You boil the hell out of it. Lorem ipsum dolor sit amet consectetur adipisicing elit. Quas cupiditate laboriosam fugiat.',
    },
    {
      question: "What's the best thing about Switzerland?",
      answer: "I don't know, but the flag is a big plus. Lorem ipsum dolor sit amet consectetur adipisicing elit. Quas cupiditate laboriosam fugiat.",
    },
    {
      question: 'What do you call someone with no body and no nose?',
      answer: 'Nobody knows. Lorem ipsum dolor sit amet consectetur adipisicing elit. Quas cupiditate laboriosam fugiat.',
    },
    {
      question: 'Why do you never see elephants hiding in trees?',
      answer: "Because they're so good at it. Lorem ipsum dolor sit amet consectetur adipisicing elit. Quas cupiditate laboriosam fugiat.",
    },
  ],
} = Astro.props
---

<div class="bg-white dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 py-24 sm:pt-32 lg:px-8 lg:py-40">
    <div class="lg:grid lg:grid-cols-12 lg:gap-8">
      <div class="lg:col-span-5">
        <h2 class="text-3xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-4xl dark:text-white">{heading}</h2>
        <p class="mt-4 text-base/7 text-pretty text-gray-600 dark:text-gray-400">
          {description} <a href={supportLinkUrl} class="font-semibold text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300">{supportLinkText}</a> team.
        </p>
      </div>
      <div class="mt-10 lg:col-span-7 lg:mt-0">
        <dl class="space-y-10">
          {items.map((item) => (
            <div>
              <dt class="text-base/7 font-semibold text-gray-900 dark:text-white">{item.question}</dt>
              <dd class="mt-2 text-base/7 text-gray-600 dark:text-gray-400">{item.answer}</dd>
            </div>
          ))}
        </dl>
      </div>
    </div>
  </div>
</div>
