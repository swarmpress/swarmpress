---
/**
 * Blog Section - Single Column With Images
 * A single column blog listing with images
 * Based on: tailwindcss-plus-components/marketing/sections/blog-sections/single_column_with_images.html
 */

export interface Post {
  title: string
  excerpt: string
  image?: string
  date: string
  dateTime?: string
  category?: string
  categoryUrl?: string
  url?: string
  author: {
    name: string
    role?: string
    image?: string
    url?: string
  }
}

export interface Props {
  heading?: string
  description?: string
  posts: Post[]
}

const {
  heading = 'From the blog',
  description = 'Learn how to grow your business with our expert advice.',
  posts = [],
} = Astro.props
---

<div class="bg-white py-24 sm:py-32 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:max-w-4xl">
      <h2 class="text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl dark:text-white">{heading}</h2>
      <p class="mt-2 text-lg/8 text-gray-600 dark:text-gray-400">{description}</p>
      <div class="mt-16 space-y-20 lg:mt-20">
        {posts.map((post) => (
          <article class="relative isolate flex flex-col gap-8 lg:flex-row">
            {post.image && (
              <div class="relative aspect-video sm:aspect-[2/1] lg:aspect-square lg:w-64 lg:shrink-0">
                <img src={post.image} alt="" class="absolute inset-0 size-full rounded-2xl bg-gray-50 object-cover dark:bg-gray-800" />
                <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10 dark:ring-white/10"></div>
              </div>
            )}
            <div>
              <div class="flex items-center gap-x-4 text-xs">
                <time datetime={post.dateTime || post.date} class="text-gray-500 dark:text-gray-400">{post.date}</time>
                {post.category && (
                  <a href={post.categoryUrl || '#'} class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100 dark:bg-gray-800/60 dark:text-gray-300 dark:hover:bg-gray-800">{post.category}</a>
                )}
              </div>
              <div class="group relative max-w-xl">
                <h3 class="mt-3 text-lg/6 font-semibold text-gray-900 group-hover:text-gray-600 dark:text-white dark:group-hover:text-gray-300">
                  <a href={post.url || '#'}>
                    <span class="absolute inset-0"></span>
                    {post.title}
                  </a>
                </h3>
                <p class="mt-5 text-sm/6 text-gray-600 dark:text-gray-400">{post.excerpt}</p>
              </div>
              <div class="mt-6 flex border-t border-gray-900/5 pt-6 dark:border-white/10">
                <div class="relative flex items-center gap-x-4">
                  {post.author.image && (
                    <img src={post.author.image} alt="" class="size-10 rounded-full bg-gray-50 dark:bg-gray-800" />
                  )}
                  <div class="text-sm/6">
                    <p class="font-semibold text-gray-900 dark:text-white">
                      <a href={post.author.url || '#'}>
                        <span class="absolute inset-0"></span>
                        {post.author.name}
                      </a>
                    </p>
                    {post.author.role && <p class="text-gray-600 dark:text-gray-400">{post.author.role}</p>}
                  </div>
                </div>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </div>
</div>
