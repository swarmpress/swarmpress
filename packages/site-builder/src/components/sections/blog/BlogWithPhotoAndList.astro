---
/**
 * Blog Section - With Photo and List
 * A layout with photo on left and job/article list on right
 * Based on: tailwindcss-plus-components/marketing/sections/blog-sections/with_photo_and_list.html
 */

export interface ListItem {
  title: string
  description: string
  meta?: string
  location?: string
  url?: string
}

export interface Props {
  heading?: string
  description?: string
  image?: string
  items: ListItem[]
  viewAllText?: string
  viewAllUrl?: string
}

const {
  heading = "We're always looking for awesome people to join us",
  description = 'Diam nunc lacus lacus aliquam turpis enim. Eget hac velit est euismod lacus.',
  image = 'https://images.unsplash.com/photo-1606857521015-7f9fcf423740?ixlib=rb-4.0.3&auto=format&fit=crop&w=1344&h=1104&q=80',
  items = [],
  viewAllText = 'View all openings',
  viewAllUrl = '#',
} = Astro.props
---

<div class="bg-white py-32 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto flex max-w-2xl flex-col items-end justify-between gap-16 lg:mx-0 lg:max-w-none lg:flex-row">
      <div class="w-full lg:max-w-lg lg:flex-auto">
        <h2 class="text-3xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-4xl dark:text-white">{heading}</h2>
        <p class="mt-6 text-xl/8 text-gray-600 dark:text-gray-400">{description}</p>
        <img src={image} alt="" class="mt-16 aspect-[6/5] w-full rounded-2xl object-cover outline-1 -outline-offset-1 outline-black/5 lg:aspect-auto lg:h-[34.5rem] dark:outline-white/10" />
      </div>
      <div class="w-full lg:max-w-xl lg:flex-auto">
        <h3 class="sr-only">Items</h3>
        <ul class="-my-8 divide-y divide-gray-100 dark:divide-gray-800">
          {items.map((item) => (
            <li class="py-8">
              <dl class="relative flex flex-wrap gap-x-3">
                <dt class="sr-only">Title</dt>
                <dd class="w-full flex-none text-lg font-semibold tracking-tight text-gray-900 dark:text-white">
                  <a href={item.url || '#'}>
                    {item.title}
                    <span aria-hidden="true" class="absolute inset-0"></span>
                  </a>
                </dd>
                <dt class="sr-only">Description</dt>
                <dd class="mt-2 w-full flex-none text-base/7 text-gray-600 dark:text-gray-400">{item.description}</dd>
                {item.meta && (
                  <>
                    <dt class="sr-only">Meta</dt>
                    <dd class="mt-4 text-base/7 font-semibold text-gray-900 dark:text-white">{item.meta}</dd>
                  </>
                )}
                {item.location && (
                  <>
                    <dt class="sr-only">Location</dt>
                    <dd class="mt-4 flex items-center gap-x-3 text-base/7 text-gray-500 dark:text-gray-400">
                      <svg viewBox="0 0 2 2" aria-hidden="true" class="size-0.5 flex-none fill-gray-300 dark:fill-gray-600">
                        <circle r="1" cx="1" cy="1" />
                      </svg>
                      {item.location}
                    </dd>
                  </>
                )}
              </dl>
            </li>
          ))}
        </ul>
        {viewAllText && (
          <div class="mt-8 flex border-t border-gray-100 pt-8 dark:border-gray-800">
            <a href={viewAllUrl} class="text-sm/6 font-semibold text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300">{viewAllText} <span aria-hidden="true">&rarr;</span></a>
          </div>
        )}
      </div>
    </div>
  </div>
</div>
