---
/**
 * Blog Section - With Featured Post
 * A blog layout with a featured post and a list of recent posts
 * Based on: tailwindcss-plus-components/marketing/sections/blog-sections/with_featured_post.html
 */

export interface Post {
  title: string
  excerpt: string
  date: string
  dateTime?: string
  url?: string
  author: {
    name: string
    image?: string
  }
}

export interface FeaturedPost extends Post {
  readMoreText?: string
}

export interface Props {
  featuredPost: FeaturedPost
  posts: Post[]
}

const { featuredPost, posts = [] } = Astro.props
---

<div class="bg-white py-24 sm:py-32 dark:bg-gray-900">
  <div class="mx-auto grid max-w-7xl grid-cols-1 gap-x-8 gap-y-12 px-6 sm:gap-y-16 lg:grid-cols-2 lg:px-8">
    <article class="mx-auto w-full max-w-2xl lg:mx-0 lg:max-w-lg">
      <time datetime={featuredPost.dateTime || featuredPost.date} class="block text-sm/6 text-gray-600 dark:text-gray-400">{featuredPost.date}</time>
      <h2 id="featured-post" class="mt-4 text-3xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-4xl dark:text-white">{featuredPost.title}</h2>
      <p class="mt-4 text-lg/8 text-gray-600 dark:text-gray-400">{featuredPost.excerpt}</p>
      <div class="mt-4 flex flex-col justify-between gap-6 sm:mt-8 sm:flex-row-reverse sm:gap-8 lg:mt-4 lg:flex-col">
        <div class="flex">
          <a href={featuredPost.url || '#'} aria-describedby="featured-post" class="text-sm/6 font-semibold text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300">{featuredPost.readMoreText || 'Continue reading'} <span aria-hidden="true">&rarr;</span></a>
        </div>
        <div class="flex lg:border-t lg:border-gray-900/10 lg:pt-8 dark:lg:border-white/10">
          <a href="#" class="flex gap-x-2.5 text-sm/6 font-semibold text-gray-900 dark:text-white">
            {featuredPost.author.image && (
              <img src={featuredPost.author.image} alt="" class="size-6 flex-none rounded-full bg-gray-50 dark:bg-gray-800" />
            )}
            {featuredPost.author.name}
          </a>
        </div>
      </div>
    </article>
    <div class="mx-auto w-full max-w-2xl border-t border-gray-900/10 pt-12 sm:pt-16 lg:mx-0 lg:max-w-none lg:border-t-0 lg:pt-0 dark:border-white/10">
      <div class="-my-12 divide-y divide-gray-900/10 dark:divide-white/10">
        {posts.map((post) => (
          <article class="py-12">
            <div class="group relative max-w-xl">
              <time datetime={post.dateTime || post.date} class="block text-sm/6 text-gray-600 dark:text-gray-400">{post.date}</time>
              <h2 class="mt-2 text-lg font-semibold text-gray-900 group-hover:text-gray-600 dark:text-white dark:group-hover:text-gray-300">
                <a href={post.url || '#'}>
                  <span class="absolute inset-0"></span>
                  {post.title}
                </a>
              </h2>
              <p class="mt-4 text-sm/6 text-gray-600 dark:text-gray-400">{post.excerpt}</p>
            </div>
            <div class="mt-4 flex">
              <a href="#" class="relative flex gap-x-2.5 text-sm/6 font-semibold text-gray-900 dark:text-white">
                {post.author.image && (
                  <img src={post.author.image} alt="" class="size-6 flex-none rounded-full bg-gray-50 dark:bg-gray-800" />
                )}
                {post.author.name}
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </div>
</div>
