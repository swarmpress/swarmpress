---
/**
 * Blog Section - Three Column With Background Images
 * A three column blog grid with full background images
 * Based on: tailwindcss-plus-components/marketing/sections/blog-sections/three_column_with_background_images.html
 */

export interface Post {
  title: string
  image: string
  date: string
  dateTime?: string
  url?: string
  author: {
    name: string
    image?: string
  }
}

export interface Props {
  heading?: string
  description?: string
  posts: Post[]
}

const {
  heading = 'From the blog',
  description = 'Learn how to grow your business with our expert advice.',
  posts = [],
} = Astro.props
---

<div class="bg-white py-24 sm:py-32 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-4xl font-semibold tracking-tight text-balance text-gray-900 sm:text-5xl dark:text-white">{heading}</h2>
      <p class="mt-2 text-lg/8 text-gray-600 dark:text-gray-400">{description}</p>
    </div>
    <div class="mx-auto mt-16 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
      {posts.map((post) => (
        <article class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pt-80 pb-8 sm:pt-48 lg:pt-80 dark:bg-gray-800">
          <img src={post.image} alt="" class="absolute inset-0 -z-10 size-full object-cover" />
          <div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40 dark:from-black/80 dark:via-black/40"></div>
          <div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10 dark:ring-white/10"></div>

          <div class="flex flex-wrap items-center gap-y-1 overflow-hidden text-sm/6 text-gray-300">
            <time datetime={post.dateTime || post.date} class="mr-8">{post.date}</time>
            <div class="-ml-4 flex items-center gap-x-4">
              <svg viewBox="0 0 2 2" class="-ml-0.5 size-0.5 flex-none fill-white/50 dark:fill-gray-300/50">
                <circle r="1" cx="1" cy="1" />
              </svg>
              <div class="flex gap-x-2.5">
                {post.author.image && (
                  <img src={post.author.image} alt="" class="size-6 flex-none rounded-full bg-white/10 dark:bg-gray-800/10" />
                )}
                {post.author.name}
              </div>
            </div>
          </div>
          <h3 class="mt-3 text-lg/6 font-semibold text-white">
            <a href={post.url || '#'}>
              <span class="absolute inset-0"></span>
              {post.title}
            </a>
          </h3>
        </article>
      ))}
    </div>
  </div>
</div>
