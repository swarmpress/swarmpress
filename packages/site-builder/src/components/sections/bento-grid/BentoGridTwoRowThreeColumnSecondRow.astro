---
/**
 * Bento Grid Section - Two Row with Three Column Second Row
 * Two-row bento grid with 3:3 first row and 2:2:2 second row
 * Based on: tailwindcss-plus-components/marketing/sections/bento-grids/two_row_bento_grid_with_three_column_second_row.html
 */

export interface BentoItem {
  eyebrow: string
  title: string
  description: string
  image?: string
  imageDark?: string
  colSpan?: number
}

export interface Props {
  eyebrow?: string
  heading?: string
  items?: BentoItem[]
}

const {
  eyebrow = 'Deploy faster',
  heading = 'Everything you need to deploy your app',
  items = [
    {
      eyebrow: 'Performance',
      title: 'Lightning-fast builds',
      description: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. In gravida justo et nulla efficitur, maximus egestas sem pellentesque.',
      image: 'https://tailwindcss.com/plus-assets/img/component-images/bento-01-performance.png',
      imageDark: 'https://tailwindcss.com/plus-assets/img/component-images/dark-bento-01-performance.png',
      colSpan: 3,
    },
    {
      eyebrow: 'Releases',
      title: 'Push to deploy',
      description: 'Curabitur auctor, ex quis auctor venenatis, eros arcu rhoncus massa, laoreet dapibus ex elit vitae odio.',
      image: 'https://tailwindcss.com/plus-assets/img/component-images/bento-01-releases.png',
      imageDark: 'https://tailwindcss.com/plus-assets/img/component-images/dark-bento-01-releases.png',
      colSpan: 3,
    },
    {
      eyebrow: 'Speed',
      title: 'Built for power users',
      description: 'Sed congue eros non finibus molestie. Vestibulum euismod augue.',
      image: 'https://tailwindcss.com/plus-assets/img/component-images/bento-01-speed.png',
      imageDark: 'https://tailwindcss.com/plus-assets/img/component-images/dark-bento-01-speed.png',
      colSpan: 2,
    },
    {
      eyebrow: 'Integrations',
      title: 'Connect your favorite tools',
      description: 'Maecenas at augue sed elit dictum vulputate, in nisi aliquam maximus arcu.',
      image: 'https://tailwindcss.com/plus-assets/img/component-images/bento-01-integrations.png',
      imageDark: 'https://tailwindcss.com/plus-assets/img/component-images/dark-bento-01-integrations.png',
      colSpan: 2,
    },
    {
      eyebrow: 'Network',
      title: 'Globally distributed CDN',
      description: 'Aenean vulputate justo commodo auctor vehicula in malesuada semper.',
      image: 'https://tailwindcss.com/plus-assets/img/component-images/bento-01-network.png',
      imageDark: 'https://tailwindcss.com/plus-assets/img/component-images/dark-bento-01-network.png',
      colSpan: 2,
    },
  ],
} = Astro.props

const cornerClasses: Record<number, string> = {
  0: 'max-lg:rounded-t-4xl lg:rounded-tl-4xl',
  1: 'lg:rounded-tr-4xl',
  2: 'lg:rounded-bl-4xl',
  4: 'max-lg:rounded-b-4xl lg:rounded-br-4xl',
}
---

<div class="bg-white py-24 sm:py-32 dark:bg-gray-900">
  <div class="mx-auto max-w-2xl px-6 lg:max-w-7xl lg:px-8">
    <h2 class="text-base/7 font-semibold text-indigo-600 dark:text-indigo-400">{eyebrow}</h2>
    <p class="mt-2 max-w-lg text-4xl font-semibold tracking-tight text-pretty text-gray-950 sm:text-5xl dark:text-white">{heading}</p>
    <div class="mt-10 grid grid-cols-1 gap-4 sm:mt-16 lg:grid-cols-6 lg:grid-rows-2">
      {items.map((item, index) => (
        <div class:list={['relative', item.colSpan === 3 ? 'lg:col-span-3' : 'lg:col-span-2']}>
          <div class:list={['absolute inset-0 rounded-lg bg-white dark:bg-gray-800', cornerClasses[index] || '']}></div>
          <div class:list={[
            'relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)]',
            index === 0 && 'max-lg:rounded-t-[calc(2rem+1px)] lg:rounded-tl-[calc(2rem+1px)]',
            index === 1 && 'lg:rounded-tr-[calc(2rem+1px)]',
            index === 2 && 'lg:rounded-bl-[calc(2rem+1px)]',
            index === 4 && 'max-lg:rounded-b-[calc(2rem+1px)] lg:rounded-br-[calc(2rem+1px)]',
          ]}>
            {item.image && (
              <>
                <img src={item.image} alt="" class:list={['h-80 object-cover dark:hidden', index === 1 ? 'object-left lg:object-right' : 'object-left']} />
                {item.imageDark && <img src={item.imageDark} alt="" class:list={['h-80 object-cover not-dark:hidden', index === 1 ? 'object-left lg:object-right' : 'object-left']} />}
              </>
            )}
            <div class="p-10 pt-4">
              <h3 class="text-sm/4 font-semibold text-indigo-600 dark:text-indigo-400">{item.eyebrow}</h3>
              <p class="mt-2 text-lg font-medium tracking-tight text-gray-950 dark:text-white">{item.title}</p>
              <p class="mt-2 max-w-lg text-sm/6 text-gray-600 dark:text-gray-400">{item.description}</p>
            </div>
          </div>
          <div class:list={['pointer-events-none absolute inset-0 rounded-lg shadow-sm outline outline-black/5 dark:outline-white/15', cornerClasses[index] || '']}></div>
        </div>
      ))}
    </div>
  </div>
</div>
