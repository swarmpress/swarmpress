---
/**
 * Logo Cloud Section - Simple with Heading
 * Centered logo grid with centered heading
 * Based on: tailwindcss-plus-components/marketing/sections/logo-clouds/simple_with_heading.html
 */

export interface Logo {
  name: string
  src: string
  srcDark?: string
  width?: number
  height?: number
}

export interface Props {
  heading?: string
  logos?: Logo[]
}

const {
  heading = "Trusted by the world's most innovative teams",
  logos = [
    {
      name: 'Transistor',
      src: 'https://tailwindcss.com/plus-assets/img/logos/158x48/transistor-logo-gray-900.svg',
      srcDark: 'https://tailwindcss.com/plus-assets/img/logos/158x48/transistor-logo-white.svg',
      width: 158,
      height: 48,
    },
    {
      name: 'Reform',
      src: 'https://tailwindcss.com/plus-assets/img/logos/158x48/reform-logo-gray-900.svg',
      srcDark: 'https://tailwindcss.com/plus-assets/img/logos/158x48/reform-logo-white.svg',
      width: 158,
      height: 48,
    },
    {
      name: 'Tuple',
      src: 'https://tailwindcss.com/plus-assets/img/logos/158x48/tuple-logo-gray-900.svg',
      srcDark: 'https://tailwindcss.com/plus-assets/img/logos/158x48/tuple-logo-white.svg',
      width: 158,
      height: 48,
    },
    {
      name: 'SavvyCal',
      src: 'https://tailwindcss.com/plus-assets/img/logos/158x48/savvycal-logo-gray-900.svg',
      srcDark: 'https://tailwindcss.com/plus-assets/img/logos/158x48/savvycal-logo-white.svg',
      width: 158,
      height: 48,
    },
    {
      name: 'Statamic',
      src: 'https://tailwindcss.com/plus-assets/img/logos/158x48/statamic-logo-gray-900.svg',
      srcDark: 'https://tailwindcss.com/plus-assets/img/logos/158x48/statamic-logo-white.svg',
      width: 158,
      height: 48,
    },
  ],
} = Astro.props
---

<div class="bg-white py-24 sm:py-32 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <h2 class="text-center text-lg/8 font-semibold text-gray-900 dark:text-white">{heading}</h2>
    <div class="mx-auto mt-10 grid max-w-lg grid-cols-4 items-center gap-x-8 gap-y-10 sm:max-w-xl sm:grid-cols-6 sm:gap-x-10 lg:mx-0 lg:max-w-none lg:grid-cols-5">
      {logos.map((logo, index) => (
        <>
          <img
            width={logo.width || 158}
            height={logo.height || 48}
            src={logo.src}
            alt={logo.name}
            class:list={[
              'col-span-2 max-h-12 w-full object-contain lg:col-span-1 dark:hidden',
              index === 3 && 'sm:col-start-2',
              index === 4 && 'col-start-2 sm:col-start-auto',
            ]}
          />
          {logo.srcDark && (
            <img
              width={logo.width || 158}
              height={logo.height || 48}
              src={logo.srcDark}
              alt={logo.name}
              class:list={[
                'col-span-2 max-h-12 w-full object-contain not-dark:hidden lg:col-span-1',
                index === 3 && 'sm:col-start-2',
                index === 4 && 'col-start-2 sm:col-start-auto',
              ]}
            />
          )}
        </>
      ))}
    </div>
  </div>
</div>
