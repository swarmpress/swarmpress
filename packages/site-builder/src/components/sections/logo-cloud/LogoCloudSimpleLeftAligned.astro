---
/**
 * Logo Cloud Section - Simple Left Aligned
 * Left-aligned logo grid with heading
 * Based on: tailwindcss-plus-components/marketing/sections/logo-clouds/simple_left_aligned.html
 */

export interface Logo {
  name: string
  src: string
  srcDark?: string
  width?: number
  height?: number
}

export interface Props {
  heading?: string
  logos?: Logo[]
}

const {
  heading = "Trusted by the world's most innovative teams",
  logos = [
    {
      name: 'Transistor',
      src: 'https://tailwindcss.com/plus-assets/img/logos/transistor-logo-gray-900.svg',
      srcDark: 'https://tailwindcss.com/plus-assets/img/logos/transistor-logo-white.svg',
      width: 158,
      height: 48,
    },
    {
      name: 'Reform',
      src: 'https://tailwindcss.com/plus-assets/img/logos/reform-logo-gray-900.svg',
      srcDark: 'https://tailwindcss.com/plus-assets/img/logos/reform-logo-white.svg',
      width: 158,
      height: 48,
    },
    {
      name: 'Tuple',
      src: 'https://tailwindcss.com/plus-assets/img/logos/tuple-logo-gray-900.svg',
      srcDark: 'https://tailwindcss.com/plus-assets/img/logos/tuple-logo-white.svg',
      width: 158,
      height: 48,
    },
    {
      name: 'SavvyCal',
      src: 'https://tailwindcss.com/plus-assets/img/logos/savvycal-logo-gray-900.svg',
      srcDark: 'https://tailwindcss.com/plus-assets/img/logos/savvycal-logo-white.svg',
      width: 158,
      height: 48,
    },
    {
      name: 'Statamic',
      src: 'https://tailwindcss.com/plus-assets/img/logos/statamic-logo-gray-900.svg',
      srcDark: 'https://tailwindcss.com/plus-assets/img/logos/statamic-logo-white.svg',
      width: 158,
      height: 48,
    },
  ],
} = Astro.props
---

<div class="bg-white py-24 sm:py-32 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:max-w-none">
      <h2 class="text-lg/8 font-semibold text-gray-900 dark:text-white">{heading}</h2>
      <div class="mx-auto mt-10 grid grid-cols-4 items-start gap-x-8 gap-y-10 sm:grid-cols-6 sm:gap-x-10 lg:mx-0 lg:grid-cols-5">
        {logos.map((logo) => (
          <>
            <img
              width={logo.width || 158}
              height={logo.height || 48}
              src={logo.src}
              alt={logo.name}
              class="col-span-2 max-h-12 w-full object-contain object-left lg:col-span-1 dark:hidden"
            />
            {logo.srcDark && (
              <img
                width={logo.width || 158}
                height={logo.height || 48}
                src={logo.srcDark}
                alt={logo.name}
                class="col-span-2 max-h-12 w-full object-contain object-left not-dark:hidden lg:col-span-1"
              />
            )}
          </>
        ))}
      </div>
    </div>
  </div>
</div>
