---
/**
 * Logo Cloud Section - Simple with Call to Action
 * Logo grid with CTA pill below
 * Based on: tailwindcss-plus-components/marketing/sections/logo-clouds/simple_with_call_to_action.html
 */

export interface Logo {
  name: string
  src: string
  srcDark?: string
  width?: number
  height?: number
}

export interface Props {
  logos?: Logo[]
  ctaText?: string
  ctaLinkText?: string
  ctaLinkUrl?: string
}

const {
  logos = [
    {
      name: 'Transistor',
      src: 'https://tailwindcss.com/plus-assets/img/logos/158x48/transistor-logo-gray-900.svg',
      srcDark: 'https://tailwindcss.com/plus-assets/img/logos/158x48/transistor-logo-white.svg',
      width: 158,
      height: 48,
    },
    {
      name: 'Reform',
      src: 'https://tailwindcss.com/plus-assets/img/logos/158x48/reform-logo-gray-900.svg',
      srcDark: 'https://tailwindcss.com/plus-assets/img/logos/158x48/reform-logo-white.svg',
      width: 158,
      height: 48,
    },
    {
      name: 'Tuple',
      src: 'https://tailwindcss.com/plus-assets/img/logos/158x48/tuple-logo-gray-900.svg',
      srcDark: 'https://tailwindcss.com/plus-assets/img/logos/158x48/tuple-logo-white.svg',
      width: 158,
      height: 48,
    },
    {
      name: 'SavvyCal',
      src: 'https://tailwindcss.com/plus-assets/img/logos/158x48/savvycal-logo-gray-900.svg',
      srcDark: 'https://tailwindcss.com/plus-assets/img/logos/158x48/savvycal-logo-white.svg',
      width: 158,
      height: 48,
    },
    {
      name: 'Statamic',
      src: 'https://tailwindcss.com/plus-assets/img/logos/158x48/statamic-logo-gray-900.svg',
      srcDark: 'https://tailwindcss.com/plus-assets/img/logos/158x48/statamic-logo-white.svg',
      width: 158,
      height: 48,
    },
  ],
  ctaText = 'Over 2500 companies use our tools to better their business.',
  ctaLinkText = 'Read our customer stories',
  ctaLinkUrl = '#',
} = Astro.props
---

<div class="bg-white py-24 sm:py-32 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto grid max-w-lg grid-cols-4 items-center gap-x-8 gap-y-12 sm:max-w-xl sm:grid-cols-6 sm:gap-x-10 sm:gap-y-14 lg:mx-0 lg:max-w-none lg:grid-cols-5">
      {logos.map((logo, index) => (
        <>
          <img
            width={logo.width || 158}
            height={logo.height || 48}
            src={logo.src}
            alt={logo.name}
            class:list={[
              'col-span-2 max-h-12 w-full object-contain lg:col-span-1 dark:hidden',
              index === 3 && 'sm:col-start-2',
              index === 4 && 'col-start-2 sm:col-start-auto',
            ]}
          />
          {logo.srcDark && (
            <img
              width={logo.width || 158}
              height={logo.height || 48}
              src={logo.srcDark}
              alt={logo.name}
              class:list={[
                'col-span-2 max-h-12 w-full object-contain not-dark:hidden lg:col-span-1',
                index === 3 && 'sm:col-start-2',
                index === 4 && 'col-start-2 sm:col-start-auto',
              ]}
            />
          )}
        </>
      ))}
    </div>
    <div class="mt-16 flex justify-center">
      <p class="relative rounded-full bg-gray-50 px-4 py-1.5 text-sm/6 text-gray-600 inset-ring inset-ring-gray-900/5 dark:bg-gray-800/75 dark:text-gray-400 dark:inset-ring-white/10">
        <span class="hidden md:inline">{ctaText}</span>
        <a href={ctaLinkUrl} class="font-semibold text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300">
          <span aria-hidden="true" class="absolute inset-0"></span>
          {ctaLinkText} <span aria-hidden="true">&rarr;</span>
        </a>
      </p>
    </div>
  </div>
</div>
