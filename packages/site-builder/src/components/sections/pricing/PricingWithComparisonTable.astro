---
/**
 * Pricing Section - With Comparison Table
 * Pricing tiers with a detailed feature comparison table
 * Based on: tailwindcss-plus-components/marketing/sections/pricing/with_comparison_table.html
 */

export interface PricingTier {
  name: string
  id: string
  price: string
  frequency: string
  ctaText?: string
  ctaUrl?: string
  featured?: boolean
}

export interface FeatureCategory {
  name: string
  features: Array<{
    name: string
    tiers: Record<string, boolean | string>
  }>
}

export interface Props {
  eyebrow?: string
  title: string
  description?: string
  tiers: PricingTier[]
  featureCategories: FeatureCategory[]
}

const {
  eyebrow = 'Pricing',
  title,
  description,
  tiers = [],
  featureCategories = [],
} = Astro.props

const checkIcon = '<path d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" fill-rule="evenodd" />'
const minusIcon = '<path d="M4 10a.75.75 0 0 1 .75-.75h10.5a.75.75 0 0 1 0 1.5H4.75A.75.75 0 0 1 4 10Z" clip-rule="evenodd" fill-rule="evenodd" />'

function getFeaturedIndex(): number {
  return tiers.findIndex(t => t.featured)
}

const featuredIdx = getFeaturedIndex()
---

<div class="bg-white py-24 sm:py-32 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-4xl text-center">
      <h2 class="text-base/7 font-semibold text-indigo-600 dark:text-indigo-400">{eyebrow}</h2>
      <p class="mt-2 text-5xl font-semibold tracking-tight text-balance text-gray-900 sm:text-6xl dark:text-white">{title}</p>
    </div>
    {description && (
      <p class="mx-auto mt-6 max-w-2xl text-center text-lg font-medium text-pretty text-gray-600 sm:text-xl/8 dark:text-gray-400">{description}</p>
    )}

    <!-- Mobile view -->
    <div class="mx-auto mt-12 max-w-md space-y-8 sm:mt-16 lg:hidden">
      {tiers.map((tier) => (
        <section class={`p-8 ${tier.featured ? 'rounded-xl bg-gray-400/5 inset-ring inset-ring-gray-200 dark:bg-white/5 dark:inset-ring-white/10' : ''}`}>
          <h3 id={`${tier.id}-mobile`} class="text-sm/6 font-semibold text-gray-900 dark:text-white">{tier.name}</h3>
          <p class="mt-2 flex items-baseline gap-x-1 text-gray-900 dark:text-white">
            <span class="text-4xl font-semibold">{tier.price}</span>
            <span class="text-sm font-semibold">{tier.frequency}</span>
          </p>
          <a
            href={tier.ctaUrl || '#'}
            aria-describedby={`${tier.id}-mobile`}
            class={`mt-8 block rounded-md px-3 py-2 text-center text-sm/6 font-semibold focus-visible:outline-2 focus-visible:outline-offset-2 ${
              tier.featured
                ? 'bg-indigo-600 text-white hover:bg-indigo-500 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-500'
                : 'text-indigo-600 inset-ring inset-ring-indigo-200 hover:inset-ring-indigo-300 focus-visible:outline-indigo-600 dark:bg-white/10 dark:text-white dark:inset-ring-white/5 dark:hover:bg-white/20 dark:hover:inset-ring-white/5 dark:focus-visible:outline-indigo-500 dark:focus-visible:outline-white/75'
            }`}
          >
            {tier.ctaText || 'Buy plan'}
          </a>
          <ul role="list" class="mt-10 space-y-4 text-sm/6 text-gray-900 dark:text-gray-200">
            {featureCategories.map((category) => (
              <li>
                <ul role="list" class="space-y-4">
                  {category.features.filter(f => f.tiers[tier.id]).map((feature) => (
                    <li class="flex gap-x-3">
                      <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="h-6 w-5 flex-none text-indigo-600 dark:text-indigo-400">
                        <Fragment set:html={checkIcon} />
                      </svg>
                      <span>
                        {feature.name}
                        {typeof feature.tiers[tier.id] === 'string' && (
                          <span class="text-sm/6 text-gray-500 dark:text-gray-400"> ({feature.tiers[tier.id]})</span>
                        )}
                      </span>
                    </li>
                  ))}
                </ul>
              </li>
            ))}
          </ul>
        </section>
      ))}
    </div>

    <!-- Desktop view -->
    <div class="isolate mt-20 hidden lg:block">
      <div class="relative -mx-8">
        {featuredIdx >= 0 && (
          <div class="absolute inset-x-4 inset-y-0 -z-10 flex">
            <div style={`margin-left: ${(featuredIdx + 1) * 25}%`} aria-hidden="true" class="flex w-1/4 px-4">
              <div class="w-full rounded-t-xl border-x border-t border-gray-900/10 bg-gray-400/5 dark:border-white/10 dark:bg-gray-800/50"></div>
            </div>
          </div>
        )}
        <table class="w-full table-fixed border-separate border-spacing-x-8 text-left">
          <caption class="sr-only">Pricing plan comparison</caption>
          <colgroup>
            <col class="w-1/4" />
            {tiers.map(() => (
              <col class="w-1/4" />
            ))}
          </colgroup>
          <thead>
            <tr>
              <td></td>
              {tiers.map((tier) => (
                <th scope="col" class="px-6 pt-6 xl:px-8 xl:pt-8">
                  <div class="text-sm/7 font-semibold text-gray-900 dark:text-white">{tier.name}</div>
                </th>
              ))}
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row"><span class="sr-only">Price</span></th>
              {tiers.map((tier) => (
                <td class="px-6 pt-2 xl:px-8">
                  <div class="flex items-baseline gap-x-1 text-gray-900 dark:text-white">
                    <span class="text-4xl font-semibold">{tier.price}</span>
                    <span class="text-sm/6 font-semibold">{tier.frequency}</span>
                  </div>
                  <a
                    href={tier.ctaUrl || '#'}
                    class={`mt-8 block rounded-md px-3 py-2 text-center text-sm/6 font-semibold focus-visible:outline-2 focus-visible:outline-offset-2 ${
                      tier.featured
                        ? 'bg-indigo-600 text-white hover:bg-indigo-500 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-500'
                        : 'text-indigo-600 inset-ring inset-ring-indigo-200 hover:inset-ring-indigo-300 focus-visible:outline-indigo-600 dark:bg-white/10 dark:text-white dark:inset-ring-white/5 dark:hover:bg-white/20 dark:hover:inset-ring-white/5 dark:focus-visible:outline-indigo-500 dark:focus-visible:outline-white/75'
                    }`}
                  >
                    {tier.ctaText || 'Buy plan'}
                  </a>
                </td>
              ))}
            </tr>

            {featureCategories.map((category, catIdx) => (
              <>
                <tr>
                  <th scope="colgroup" colspan={tiers.length + 1} class={`${catIdx === 0 ? 'pt-8' : 'pt-16'} pb-4 text-sm/6 font-semibold text-gray-900 dark:text-white`}>
                    {category.name}
                    <div class="absolute inset-x-8 mt-4 h-px bg-gray-900/10 dark:bg-white/10"></div>
                  </th>
                </tr>
                {category.features.map((feature) => (
                  <tr>
                    <th scope="row" class="py-4 text-sm/6 font-normal text-gray-900 dark:text-gray-200">
                      {feature.name}
                      <div class="absolute inset-x-8 mt-4 h-px bg-gray-900/5 dark:bg-white/5"></div>
                    </th>
                    {tiers.map((tier) => (
                      <td class="px-6 py-4 xl:px-8">
                        {typeof feature.tiers[tier.id] === 'boolean' ? (
                          feature.tiers[tier.id] ? (
                            <>
                              <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="mx-auto size-5 text-indigo-600 dark:text-indigo-400">
                                <Fragment set:html={checkIcon} />
                              </svg>
                              <span class="sr-only">Included in {tier.name}</span>
                            </>
                          ) : (
                            <>
                              <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="mx-auto size-5 text-gray-400 dark:text-gray-500">
                                <Fragment set:html={minusIcon} />
                              </svg>
                              <span class="sr-only">Not included in {tier.name}</span>
                            </>
                          )
                        ) : (
                          <div class="text-center text-sm/6 text-gray-500 dark:text-gray-400">{feature.tiers[tier.id]}</div>
                        )}
                      </td>
                    ))}
                  </tr>
                ))}
              </>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
