---
/**
 * Pricing Section - Single Price with Details
 * A single pricing option with detailed feature list
 * Based on: tailwindcss-plus-components/marketing/sections/pricing/single_price_with_details.html
 */

export interface Props {
  title: string
  description?: string
  productName: string
  productDescription?: string
  price: string
  priceSuffix?: string
  priceLabel?: string
  features: string[]
  ctaText?: string
  ctaUrl?: string
  note?: string
}

const {
  title,
  description,
  productName,
  productDescription,
  price,
  priceSuffix = 'USD',
  priceLabel = 'Pay once, own it forever',
  features = [],
  ctaText = 'Get access',
  ctaUrl = '#',
  note,
} = Astro.props

const checkIcon = '<path d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" fill-rule="evenodd" />'
---

<div class="bg-white py-24 sm:py-32 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-4xl sm:text-center">
      <h2 class="text-5xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-6xl sm:text-balance dark:text-white">{title}</h2>
      {description && (
        <p class="mx-auto mt-6 max-w-2xl text-lg font-medium text-pretty text-gray-500 sm:text-xl/8 dark:text-gray-400">{description}</p>
      )}
    </div>
    <div class="mx-auto mt-16 max-w-2xl rounded-3xl ring-1 ring-gray-200 sm:mt-20 lg:mx-0 lg:flex lg:max-w-none dark:bg-gray-800/50 dark:ring-white/10">
      <div class="p-8 sm:p-10 lg:flex-auto">
        <h3 class="text-3xl font-semibold tracking-tight text-gray-900 dark:text-white">{productName}</h3>
        {productDescription && (
          <p class="mt-6 text-base/7 text-gray-600 dark:text-gray-300">{productDescription}</p>
        )}
        <div class="mt-10 flex items-center gap-x-4">
          <h4 class="flex-none text-sm/6 font-semibold text-indigo-600 dark:text-indigo-400">What's included</h4>
          <div class="h-px flex-auto bg-gray-100 dark:bg-white/10"></div>
        </div>
        <ul role="list" class="mt-8 grid grid-cols-1 gap-4 text-sm/6 text-gray-600 sm:grid-cols-2 sm:gap-6 dark:text-gray-300">
          {features.map((feature) => (
            <li class="flex gap-x-3">
              <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="h-6 w-5 flex-none text-indigo-600 dark:text-indigo-400">
                <Fragment set:html={checkIcon} />
              </svg>
              {feature}
            </li>
          ))}
        </ul>
      </div>
      <div class="-mt-2 p-2 lg:mt-0 lg:w-full lg:max-w-md lg:shrink-0">
        <div class="rounded-2xl bg-gray-50 py-10 text-center inset-ring inset-ring-gray-900/5 lg:flex lg:flex-col lg:justify-center lg:py-16 dark:bg-gray-900 dark:inset-ring-white/10">
          <div class="mx-auto max-w-xs px-8">
            <p class="text-base font-semibold text-gray-600 dark:text-gray-400">{priceLabel}</p>
            <p class="mt-6 flex items-baseline justify-center gap-x-2">
              <span class="text-5xl font-semibold tracking-tight text-gray-900 dark:text-white">{price}</span>
              <span class="text-sm/6 font-semibold tracking-wide text-gray-600 dark:text-gray-400">{priceSuffix}</span>
            </p>
            <a href={ctaUrl} class="mt-10 block w-full rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:shadow-none dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-500">{ctaText}</a>
            {note && (
              <p class="mt-6 text-xs/5 text-gray-600 dark:text-gray-400">{note}</p>
            )}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
