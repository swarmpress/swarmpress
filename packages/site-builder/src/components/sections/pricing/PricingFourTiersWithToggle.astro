---
/**
 * Pricing Section - Four Tiers with Toggle
 * A 4-tier pricing layout with monthly/annual toggle
 * Based on: tailwindcss-plus-components/marketing/sections/pricing/four_tiers_with_toggle.html
 */

export interface PricingFeature {
  text: string
}

export interface PricingTier {
  name: string
  id: string
  description: string
  priceMonthly: string
  priceAnnually: string
  features: PricingFeature[]
  ctaText?: string
  ctaUrl?: string
  featured?: boolean
  badge?: string
}

export interface Props {
  eyebrow?: string
  title: string
  description?: string
  tiers: PricingTier[]
}

const {
  eyebrow = 'Pricing',
  title,
  description,
  tiers = [],
} = Astro.props

const checkIcon = '<path d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" fill-rule="evenodd" />'
---

<div class="pricing-four-tiers bg-white py-24 sm:py-32 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-4xl text-center">
      <h2 class="text-base/7 font-semibold text-indigo-600 dark:text-indigo-400">{eyebrow}</h2>
      <p class="mt-2 text-5xl font-semibold tracking-tight text-balance text-gray-900 sm:text-6xl dark:text-white">{title}</p>
    </div>
    {description && (
      <p class="mx-auto mt-6 max-w-2xl text-center text-lg font-medium text-pretty text-gray-600 sm:text-xl/8 dark:text-gray-400">{description}</p>
    )}

    <div class="mt-16 flex justify-center">
      <fieldset aria-label="Payment frequency">
        <div class="grid grid-cols-2 gap-x-1 rounded-full p-1 text-center text-xs/5 font-semibold inset-ring inset-ring-gray-200 dark:inset-ring-white/10">
          <label class="frequency-label monthly-label group relative rounded-full px-2.5 py-1 cursor-pointer bg-indigo-600 dark:bg-indigo-500">
            <input type="radio" name="frequency-four" value="monthly" checked class="sr-only" />
            <span class="text-white">Monthly</span>
          </label>
          <label class="frequency-label annual-label group relative rounded-full px-2.5 py-1 cursor-pointer">
            <input type="radio" name="frequency-four" value="annually" class="sr-only" />
            <span class="text-gray-500 dark:text-gray-400">Annually</span>
          </label>
        </div>
      </fieldset>
    </div>

    <div class="isolate mx-auto mt-10 grid max-w-md grid-cols-1 gap-8 md:max-w-2xl md:grid-cols-2 lg:max-w-4xl xl:mx-0 xl:max-w-none xl:grid-cols-4">
      {tiers.map((tier) => (
        <div class={`rounded-3xl p-8 ring-1 xl:p-10 ${tier.featured ? 'ring-2 ring-indigo-600 dark:ring-indigo-400' : 'ring-gray-200 dark:ring-white/15'} dark:bg-gray-800/50`}>
          <div class="flex items-center justify-between gap-x-4">
            <h3 id={tier.id} class={`text-lg/8 font-semibold ${tier.featured ? 'text-indigo-600 dark:text-indigo-400' : 'text-gray-900 dark:text-white'}`}>
              {tier.name}
            </h3>
            {tier.badge && (
              <p class="rounded-full bg-indigo-600/10 px-2.5 py-1 text-xs/5 font-semibold text-indigo-600 dark:bg-indigo-500 dark:text-white">{tier.badge}</p>
            )}
          </div>
          <p class="mt-4 text-sm/6 text-gray-600 dark:text-gray-300">{tier.description}</p>

          <p class="mt-6 flex items-baseline gap-x-1 price-monthly">
            <span class="text-4xl font-semibold tracking-tight text-gray-900 dark:text-white">{tier.priceMonthly}</span>
            <span class="text-sm/6 font-semibold text-gray-600 dark:text-gray-400">/month</span>
          </p>
          <p class="mt-6 flex items-baseline gap-x-1 price-annually hidden">
            <span class="text-4xl font-semibold tracking-tight text-gray-900 dark:text-white">{tier.priceAnnually}</span>
            <span class="text-sm/6 font-semibold text-gray-600 dark:text-gray-400">/year</span>
          </p>

          <a
            href={tier.ctaUrl || '#'}
            aria-describedby={tier.id}
            class={`mt-6 block w-full rounded-md px-3 py-2 text-center text-sm/6 font-semibold focus-visible:outline-2 focus-visible:outline-offset-2 ${
              tier.featured
                ? 'bg-indigo-600 text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:shadow-none dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-500'
                : 'text-indigo-600 inset-ring-1 inset-ring-indigo-200 hover:inset-ring-indigo-300 focus-visible:outline-indigo-600 dark:bg-white/10 dark:text-white dark:inset-ring dark:inset-ring-white/5 dark:hover:bg-white/20 dark:hover:inset-ring-white/5 dark:focus-visible:outline-indigo-500 dark:focus-visible:outline-white/75'
            }`}
          >
            {tier.ctaText || 'Buy plan'}
          </a>

          <ul role="list" class="mt-8 space-y-3 text-sm/6 text-gray-600 dark:text-gray-300">
            {tier.features.map((feature) => (
              <li class="flex gap-x-3">
                <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="h-6 w-5 flex-none text-indigo-600 dark:text-indigo-400">
                  <Fragment set:html={checkIcon} />
                </svg>
                {feature.text}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const container = document.querySelector('.pricing-four-tiers')
    if (!container) return

    const radios = container.querySelectorAll('input[name="frequency-four"]')
    const monthlyLabels = container.querySelectorAll('.monthly-label')
    const annualLabels = container.querySelectorAll('.annual-label')
    const monthlyPrices = container.querySelectorAll('.price-monthly')
    const annualPrices = container.querySelectorAll('.price-annually')

    radios.forEach(radio => {
      radio.addEventListener('change', (e) => {
        const isAnnual = (e.target as HTMLInputElement).value === 'annually'

        monthlyLabels.forEach(label => {
          label.classList.toggle('bg-indigo-600', !isAnnual)
          label.classList.toggle('dark:bg-indigo-500', !isAnnual)
          const span = label.querySelector('span')
          if (span) {
            span.classList.toggle('text-white', !isAnnual)
            span.classList.toggle('text-gray-500', isAnnual)
            span.classList.toggle('dark:text-gray-400', isAnnual)
          }
        })

        annualLabels.forEach(label => {
          label.classList.toggle('bg-indigo-600', isAnnual)
          label.classList.toggle('dark:bg-indigo-500', isAnnual)
          const span = label.querySelector('span')
          if (span) {
            span.classList.toggle('text-white', isAnnual)
            span.classList.toggle('text-gray-500', !isAnnual)
            span.classList.toggle('dark:text-gray-400', !isAnnual)
          }
        })

        monthlyPrices.forEach(el => el.classList.toggle('hidden', isAnnual))
        annualPrices.forEach(el => el.classList.toggle('hidden', !isAnnual))
      })
    })
  })
</script>
