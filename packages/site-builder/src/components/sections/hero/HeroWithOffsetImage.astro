---
/**
 * Hero Section - With Offset Image
 * A hero with skewed background and offset image
 * Based on: tailwindcss-plus-components/marketing/sections/heroes/with_offset_image.html
 */

export interface Button {
  text: string
  url: string
  variant: 'primary' | 'secondary' | 'outline' | 'ghost'
  external?: boolean
}

export interface Props {
  title: string
  subtitle?: string
  buttons?: Button[]
  image: string
  imageAlt?: string
}

const {
  title,
  subtitle,
  buttons = [],
  image,
  imageAlt = '',
} = Astro.props
---

<div class="bg-white dark:bg-gray-900">
  <div class="relative isolate overflow-hidden bg-gradient-to-b from-indigo-100/20 pt-14 dark:from-indigo-950/10">
    <!-- Skewed background -->
    <div
      aria-hidden="true"
      class="absolute inset-y-0 right-1/2 -z-10 -mr-96 w-[200%] origin-top-right skew-x-[-30deg] bg-white shadow-xl shadow-indigo-600/10 ring-1 ring-indigo-50 sm:-mr-80 lg:-mr-96 dark:bg-gray-800/30 dark:shadow-indigo-400/10 dark:ring-white/5"
    />

    <div class="mx-auto max-w-7xl px-6 py-32 sm:py-40 lg:px-8">
      <div class="mx-auto max-w-2xl lg:mx-0 lg:grid lg:max-w-none lg:grid-cols-2 lg:gap-x-16 lg:gap-y-8 xl:grid-cols-1 xl:grid-rows-1 xl:gap-x-8">
        <h1 class="max-w-2xl text-5xl font-semibold tracking-tight text-balance text-gray-900 sm:text-7xl lg:col-span-2 xl:col-auto dark:text-white">
          {title}
        </h1>

        <div class="mt-6 max-w-xl lg:mt-0 xl:col-end-1 xl:row-start-1">
          {subtitle && (
            <p class="text-lg font-medium text-pretty text-gray-500 sm:text-xl/8 dark:text-gray-400">
              {subtitle}
            </p>
          )}

          {buttons.length > 0 && (
            <div class="mt-10 flex items-center gap-x-6">
              {buttons.map((button) => (
                <a
                  href={button.url}
                  target={button.external ? '_blank' : undefined}
                  rel={button.external ? 'noopener noreferrer' : undefined}
                  class:list={[
                    button.variant === 'primary' &&
                      'rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-500',
                    button.variant === 'secondary' &&
                      'rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 dark:bg-gray-800 dark:text-white dark:ring-gray-700 dark:hover:bg-gray-700',
                    button.variant === 'outline' &&
                      'rounded-md px-3.5 py-2.5 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:ring-gray-400 dark:text-white dark:ring-gray-700 dark:hover:ring-gray-500',
                    button.variant === 'ghost' &&
                      'text-sm/6 font-semibold text-gray-900 dark:text-white',
                  ]}
                >
                  {button.text}
                  {button.variant === 'ghost' && <span aria-hidden="true"> &rarr;</span>}
                </a>
              ))}
            </div>
          )}
        </div>

        <img
          src={image}
          alt={imageAlt}
          class="mt-10 aspect-[6/5] w-full max-w-lg rounded-2xl object-cover outline-1 -outline-offset-1 outline-black/5 sm:mt-16 lg:mt-0 lg:max-w-none xl:row-span-2 xl:row-end-2 xl:mt-36 dark:outline-white/10"
        />
      </div>
    </div>

    <!-- Bottom gradient fade -->
    <div class="absolute inset-x-0 bottom-0 -z-10 h-24 bg-gradient-to-t from-white sm:h-32 dark:from-gray-900" />
  </div>
</div>
