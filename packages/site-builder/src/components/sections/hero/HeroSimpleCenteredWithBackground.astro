---
/**
 * Hero Section - Simple Centered with Background Image
 * A centered hero with a full-bleed background image
 * Based on: tailwindcss-plus-components/marketing/sections/heroes/simple_centered_with_background_image.html
 */

export interface Button {
  text: string
  url: string
  variant: 'primary' | 'secondary' | 'outline' | 'ghost'
  external?: boolean
}

export interface Props {
  title: string
  subtitle?: string
  eyebrow?: string
  eyebrowUrl?: string
  buttons?: Button[]
  backgroundImage: string
  backgroundImageDark?: string
  showGradient?: boolean
}

const {
  title,
  subtitle,
  eyebrow,
  eyebrowUrl,
  buttons = [],
  backgroundImage,
  backgroundImageDark,
  showGradient = true,
} = Astro.props
---

<div class="bg-white dark:bg-gray-900">
  <div class="relative isolate overflow-hidden pt-14">
    <!-- Background images with blend mode -->
    {backgroundImageDark && (
      <img
        src={backgroundImageDark}
        alt=""
        class="absolute inset-0 -z-10 size-full object-cover hidden dark:block"
      />
    )}
    <img
      src={backgroundImage}
      alt=""
      class="absolute inset-0 -z-10 size-full object-cover opacity-10 dark:hidden"
    />

    {showGradient && (
      <div
        aria-hidden="true"
        class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80"
      >
        <div
          style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
          class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-20 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]"
        />
      </div>
    )}

    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl py-32 sm:py-48 lg:py-56">
        {eyebrow && (
          <div class="hidden sm:mb-8 sm:flex sm:justify-center">
            <div class="relative rounded-full px-3 py-1 text-sm/6 text-gray-600 ring-1 ring-gray-900/10 hover:ring-gray-900/20 dark:text-gray-400 dark:ring-white/10 dark:hover:ring-white/20">
              {eyebrow}
              {eyebrowUrl && (
                <a href={eyebrowUrl} class="font-semibold text-indigo-600 dark:text-indigo-400">
                  <span aria-hidden="true" class="absolute inset-0" />
                  Read more <span aria-hidden="true">&rarr;</span>
                </a>
              )}
            </div>
          </div>
        )}

        <div class="text-center">
          <h1 class="text-5xl font-semibold tracking-tight text-balance text-gray-900 sm:text-7xl dark:text-white">
            {title}
          </h1>

          {subtitle && (
            <p class="mt-8 text-lg font-medium text-pretty text-gray-600 sm:text-xl/8 dark:text-gray-400">
              {subtitle}
            </p>
          )}

          {buttons.length > 0 && (
            <div class="mt-10 flex items-center justify-center gap-x-6">
              {buttons.map((button) => (
                <a
                  href={button.url}
                  target={button.external ? '_blank' : undefined}
                  rel={button.external ? 'noopener noreferrer' : undefined}
                  class:list={[
                    button.variant === 'primary' &&
                      'rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-500',
                    button.variant === 'secondary' &&
                      'rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 dark:bg-gray-800 dark:text-white dark:ring-gray-700 dark:hover:bg-gray-700',
                    button.variant === 'outline' &&
                      'rounded-md px-3.5 py-2.5 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:ring-gray-400 dark:text-white dark:ring-gray-700 dark:hover:ring-gray-500',
                    button.variant === 'ghost' &&
                      'text-sm/6 font-semibold text-gray-900 dark:text-white',
                  ]}
                >
                  {button.text}
                  {button.variant === 'ghost' && <span aria-hidden="true"> &rarr;</span>}
                </a>
              ))}
            </div>
          )}
        </div>
      </div>
    </div>

    {showGradient && (
      <div
        aria-hidden="true"
        class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]"
      >
        <div
          style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
          class="relative left-[calc(50%+3rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-20 sm:left-[calc(50%+36rem)] sm:w-[72.1875rem]"
        />
      </div>
    )}
  </div>
</div>
