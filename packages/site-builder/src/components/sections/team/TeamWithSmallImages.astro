---
/**
 * Team Section - With Small Images
 * Team grid with small round images and inline name/role
 * Based on: tailwindcss-plus-components/marketing/sections/team-sections/with_small_images.html
 */

export interface TeamMember {
  name: string
  role: string
  image: string
}

export interface Props {
  heading?: string
  description?: string
  members: TeamMember[]
}

const {
  heading = 'Meet our leadership',
  description = "We're a dynamic group of individuals who are passionate about what we do and dedicated to delivering the best results for our clients.",
  members = [],
} = Astro.props
---

<div class="bg-white py-24 sm:py-32 dark:bg-gray-900">
  <div class="mx-auto grid max-w-7xl gap-20 px-6 lg:px-8 xl:grid-cols-3">
    <div class="max-w-xl">
      <h2 class="text-3xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-4xl dark:text-white">{heading}</h2>
      <p class="mt-6 text-lg/8 text-gray-600 dark:text-gray-400">{description}</p>
    </div>
    <ul role="list" class="grid gap-x-8 gap-y-12 sm:grid-cols-2 sm:gap-y-16 xl:col-span-2">
      {members.map((member) => (
        <li>
          <div class="flex items-center gap-x-6">
            <img src={member.image} alt={member.name} class="size-16 rounded-full outline-1 -outline-offset-1 outline-black/5 dark:outline-white/10" />
            <div>
              <h3 class="text-base/7 font-semibold tracking-tight text-gray-900 dark:text-white">{member.name}</h3>
              <p class="text-sm/6 font-semibold text-indigo-600 dark:text-indigo-400">{member.role}</p>
            </div>
          </div>
        </li>
      ))}
    </ul>
  </div>
</div>
