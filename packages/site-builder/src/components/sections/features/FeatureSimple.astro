---
/**
 * Feature Section - Simple
 * A simple feature section with 3-column grid of features
 * Based on: tailwindcss-plus-components/marketing/sections/feature-sections/simple.html
 */

export interface Feature {
  title: string
  description: string
}

export interface Props {
  title: string
  description?: string
  features: Feature[]
}

const {
  title,
  description,
  features = [],
} = Astro.props
---

<div class="bg-white py-24 sm:py-32 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:mx-0">
      <h2 class="text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl dark:text-white">
        {title}
      </h2>
      {description && (
        <p class="mt-6 text-lg/8 text-gray-700 dark:text-gray-300">{description}</p>
      )}
    </div>
    <dl class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 text-base/7 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3">
      {features.map((feature) => (
        <div>
          <dt class="font-semibold text-gray-900 dark:text-white">{feature.title}</dt>
          <dd class="mt-1 text-gray-600 dark:text-gray-400">{feature.description}</dd>
        </div>
      ))}
    </dl>
  </div>
</div>
