---
/**
 * Feature Section - Offset 2x2 Grid
 * An offset layout with title on left and 2x2 grid of features on right
 * Based on: tailwindcss-plus-components/marketing/sections/feature-sections/offset_2x2_grid.html
 */

export interface Feature {
  title: string
  description: string
  icon?: string
}

export interface Props {
  title: string
  features: Feature[]
}

const {
  title,
  features = [],
} = Astro.props

// Default icon
const defaultIcon = '<path d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" stroke-linecap="round" stroke-linejoin="round" />'
---

<div class="bg-white py-24 sm:py-32 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto grid max-w-2xl grid-cols-1 gap-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-5">
      <h2 class="col-span-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl dark:text-white">
        {title}
      </h2>
      <dl class="col-span-3 grid grid-cols-1 gap-x-8 gap-y-16 sm:grid-cols-2">
        {features.map((feature) => (
          <div>
            <dt class="text-base/7 font-semibold text-gray-900 dark:text-white">
              <div class="mb-6 flex size-10 items-center justify-center rounded-lg bg-indigo-600 dark:bg-indigo-500">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true" class="size-6 text-white">
                  <Fragment set:html={feature.icon || defaultIcon} />
                </svg>
              </div>
              {feature.title}
            </dt>
            <dd class="mt-1 text-base/7 text-gray-600 dark:text-gray-400">{feature.description}</dd>
          </div>
        ))}
      </dl>
    </div>
  </div>
</div>
