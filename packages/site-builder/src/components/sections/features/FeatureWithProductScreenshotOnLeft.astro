---
/**
 * Feature Section - With Product Screenshot on Left
 * A split layout with product screenshot on left and features on right
 * Based on: tailwindcss-plus-components/marketing/sections/feature-sections/with_product_screenshot_on_left.html
 */

export interface Feature {
  title: string
  description: string
  icon?: string
}

export interface Props {
  eyebrow?: string
  title: string
  description?: string
  features: Feature[]
  screenshot?: string
  screenshotDark?: string
  screenshotAlt?: string
}

const {
  eyebrow,
  title,
  description,
  features = [],
  screenshot,
  screenshotDark,
  screenshotAlt = 'Product screenshot',
} = Astro.props

// Default icon
const defaultIcon = '<path d="M5.5 17a4.5 4.5 0 0 1-1.44-8.765 4.5 4.5 0 0 1 8.302-3.046 3.5 3.5 0 0 1 4.504 4.272A4 4 0 0 1 15 17H5.5Zm3.75-2.75a.75.75 0 0 0 1.5 0V9.66l1.95 2.1a.75.75 0 1 0 1.1-1.02l-3.25-3.5a.75.75 0 0 0-1.1 0l-3.25 3.5a.75.75 0 1 0 1.1 1.02l1.95-2.1v4.59Z" clip-rule="evenodd" fill-rule="evenodd" />'
---

<div class="overflow-hidden bg-white py-24 sm:py-32 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2">
      {screenshot && (
        <div class="lg:order-first lg:pr-8">
          {screenshotDark && (
            <img
              width="2432"
              height="1442"
              src={screenshotDark}
              alt={screenshotAlt}
              class="w-3xl max-w-none rounded-xl shadow-xl ring-1 ring-gray-400/10 hidden dark:block sm:w-228 dark:ring-white/10"
            />
          )}
          <img
            width="2432"
            height="1442"
            src={screenshot}
            alt={screenshotAlt}
            class={`w-3xl max-w-none rounded-xl shadow-xl ring-1 ring-gray-400/10 sm:w-228 dark:ring-white/10 ${screenshotDark ? 'dark:hidden' : ''}`}
          />
        </div>
      )}
      <div class="lg:pt-4">
        <div class="lg:max-w-lg">
          {eyebrow && (
            <h2 class="text-base/7 font-semibold text-indigo-600 dark:text-indigo-400">{eyebrow}</h2>
          )}
          <p class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl dark:text-white">
            {title}
          </p>
          {description && (
            <p class="mt-6 text-lg/8 text-gray-700 dark:text-gray-300">{description}</p>
          )}
          <dl class="mt-10 max-w-xl space-y-8 text-base/7 text-gray-600 lg:max-w-none dark:text-gray-400">
            {features.map((feature) => (
              <div class="relative pl-9">
                <dt class="inline font-semibold text-gray-900 dark:text-white">
                  <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="absolute top-1 left-1 size-5 text-indigo-600 dark:text-indigo-400">
                    <Fragment set:html={feature.icon || defaultIcon} />
                  </svg>
                  {feature.title}
                </dt>
                <dd class="inline">{feature.description}</dd>
              </div>
            ))}
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>
