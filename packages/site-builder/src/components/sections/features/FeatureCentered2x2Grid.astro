---
/**
 * Feature Section - Centered 2x2 Grid
 * A centered 2x2 grid of features with large icons
 * Based on: tailwindcss-plus-components/marketing/sections/feature-sections/centered_2x2_grid.html
 */

export interface Feature {
  title: string
  description: string
  icon?: string
}

export interface Props {
  eyebrow?: string
  title: string
  description?: string
  features: Feature[]
}

const {
  eyebrow,
  title,
  description,
  features = [],
} = Astro.props

// Default icon
const defaultIcon = '<path d="M12 16.5V9.75m0 0 3 3m-3-3-3 3M6.75 19.5a4.5 4.5 0 0 1-1.41-8.775 5.25 5.25 0 0 1 10.233-2.33 3 3 0 0 1 3.758 3.848A3.752 3.752 0 0 1 18 19.5H6.75Z" stroke-linecap="round" stroke-linejoin="round" />'
---

<div class="bg-white py-24 sm:py-32 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:text-center">
      {eyebrow && (
        <h2 class="text-base/7 font-semibold text-indigo-600 dark:text-indigo-400">{eyebrow}</h2>
      )}
      <p class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl lg:text-balance dark:text-white">
        {title}
      </p>
      {description && (
        <p class="mt-6 text-lg/8 text-gray-700 dark:text-gray-300">{description}</p>
      )}
    </div>
    <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-4xl">
      <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-10 lg:max-w-none lg:grid-cols-2 lg:gap-y-16">
        {features.map((feature) => (
          <div class="relative pl-16">
            <dt class="text-base/7 font-semibold text-gray-900 dark:text-white">
              <div class="absolute top-0 left-0 flex size-10 items-center justify-center rounded-lg bg-indigo-600 dark:bg-indigo-500">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true" class="size-6 text-white">
                  <Fragment set:html={feature.icon || defaultIcon} />
                </svg>
              </div>
              {feature.title}
            </dt>
            <dd class="mt-2 text-base/7 text-gray-600 dark:text-gray-400">{feature.description}</dd>
          </div>
        ))}
      </dl>
    </div>
  </div>
</div>
