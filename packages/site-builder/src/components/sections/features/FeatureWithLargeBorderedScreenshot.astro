---
/**
 * Feature Section - With Large Bordered Screenshot
 * A centered layout with large bordered screenshot and feature grid below
 * Based on: tailwindcss-plus-components/marketing/sections/feature-sections/with_large_bordered_screenshot.html
 */

export interface Feature {
  title: string
  description: string
  icon?: string
}

export interface Props {
  eyebrow?: string
  title: string
  description?: string
  screenshot?: string
  screenshotDark?: string
  screenshotAlt?: string
  features: Feature[]
}

const {
  eyebrow,
  title,
  description,
  screenshot,
  screenshotDark,
  screenshotAlt = 'App screenshot',
  features = [],
} = Astro.props

// Default icon
const defaultIcon = '<path d="M5.5 17a4.5 4.5 0 0 1-1.44-8.765 4.5 4.5 0 0 1 8.302-3.046 3.5 3.5 0 0 1 4.504 4.272A4 4 0 0 1 15 17H5.5Zm3.75-2.75a.75.75 0 0 0 1.5 0V9.66l1.95 2.1a.75.75 0 1 0 1.1-1.02l-3.25-3.5a.75.75 0 0 0-1.1 0l-3.25 3.5a.75.75 0 1 0 1.1 1.02l1.95-2.1v4.59Z" clip-rule="evenodd" fill-rule="evenodd" />'
---

<div class="bg-white py-24 sm:py-32 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl sm:text-center">
      {eyebrow && (
        <h2 class="text-base/7 font-semibold text-indigo-600 dark:text-indigo-400">{eyebrow}</h2>
      )}
      <p class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl sm:text-balance dark:text-white">
        {title}
      </p>
      {description && (
        <p class="mt-6 text-lg/8 text-gray-600 dark:text-gray-300">{description}</p>
      )}
    </div>
  </div>

  {screenshot && (
    <div class="relative overflow-hidden pt-16">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="overflow-hidden rounded-xl border border-gray-200 bg-gray-50 dark:border-gray-700 dark:bg-gray-800">
          {screenshotDark && (
            <img
              width="2432"
              height="1442"
              src={screenshotDark}
              alt={screenshotAlt}
              class="w-full hidden dark:block"
            />
          )}
          <img
            width="2432"
            height="1442"
            src={screenshot}
            alt={screenshotAlt}
            class={`w-full ${screenshotDark ? 'dark:hidden' : ''}`}
          />
        </div>
      </div>
    </div>
  )}

  <div class="mx-auto mt-16 max-w-7xl px-6 sm:mt-20 md:mt-24 lg:px-8">
    <dl class="mx-auto grid max-w-2xl grid-cols-1 gap-x-6 gap-y-10 text-base/7 text-gray-600 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3 lg:gap-x-8 lg:gap-y-16 dark:text-gray-400">
      {features.map((feature) => (
        <div class="relative pl-9">
          <dt class="inline font-semibold text-gray-900 dark:text-white">
            <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="absolute top-1 left-1 size-5 text-indigo-600 dark:text-indigo-400">
              <Fragment set:html={feature.icon || defaultIcon} />
            </svg>
            {feature.title}
          </dt>
          <dd class="inline">{feature.description}</dd>
        </div>
      ))}
    </dl>
  </div>
</div>
