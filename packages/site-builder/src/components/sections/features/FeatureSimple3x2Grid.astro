---
/**
 * Feature Section - Simple 3x2 Grid
 * A 3x2 grid of features with icons
 * Based on: tailwindcss-plus-components/marketing/sections/feature-sections/simple_3x2_grid.html
 */

export interface Feature {
  title: string
  description: string
  icon?: string
}

export interface Props {
  eyebrow?: string
  title: string
  description?: string
  features: Feature[]
}

const {
  eyebrow,
  title,
  description,
  features = [],
} = Astro.props

// Default checkmark icon if no custom icon provided
const defaultIcon = '<path d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" fill-rule="evenodd" />'
---

<div class="bg-white py-24 sm:py-32 dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:mx-0">
      {eyebrow && (
        <h2 class="text-base/7 font-semibold text-indigo-600 dark:text-indigo-400">{eyebrow}</h2>
      )}
      <p class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl dark:text-white">
        {title}
      </p>
      {description && (
        <p class="mt-6 text-lg/8 text-gray-700 dark:text-gray-300">{description}</p>
      )}
    </div>
    <dl class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-8 text-base/7 text-gray-600 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3 lg:gap-x-16 dark:text-gray-400">
      {features.map((feature) => (
        <div class="relative pl-9">
          <dt class="inline font-semibold text-gray-900 dark:text-white">
            <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="absolute top-1 left-1 size-5 text-indigo-600 dark:text-indigo-500">
              <Fragment set:html={feature.icon || defaultIcon} />
            </svg>
            {feature.title}
          </dt>
          <dd class="inline">{feature.description}</dd>
        </div>
      ))}
    </dl>
  </div>
</div>
