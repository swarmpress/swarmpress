const { blocks } = Astro.props
---

<article class="content-renderer">
  {blocks.map((block) => {
    switch (block.type) {
      case 'paragraph':
        return <Paragraph text={block.text} />

      case 'heading':
        return <Heading level={block.level} text={block.text} id={block.id} />

      case 'hero':
        return (
          <Hero
            title={block.title}
            subtitle={block.subtitle}
            backgroundImage={block.backgroundImage}
            ctaText={block.ctaText}
            ctaUrl={block.ctaUrl}
          />
        )

      case 'image':
        return (
          <Image
            url={block.url}
            alt={block.alt}
            caption={block.caption}
            width={block.width}
            height={block.height}
          />
        )

      case 'gallery':
        return <Gallery images={block.images} columns={block.columns} />

      case 'quote':
        return <Quote text={block.text} author={block.author} role={block.role} />

      case 'list':
        return <List items={block.items} ordered={block.ordered} />

      case 'faq':
        return <FAQ items={block.items} />

      case 'callout':
        return <Callout text={block.text} type={block.type} title={block.title} />

      case 'embed':
        return <Embed url={block.url} type={block.embedType} caption={block.caption} />

      case 'collection-embed':
        return (
          <CollectionEmbed
            collectionType={block.collectionType}
            displayName={block.displayName}
            singularName={block.singularName}
            items={block.items || []}
            display={block.display || { layout: 'grid' }}
            heading={block.heading}
            headingLevel={block.headingLevel}
            showViewAll={block.showViewAll}
            viewAllUrl={block.viewAllUrl}
          />
        )

      // Marketing section blocks
      case 'hero-section': {
        const variant = block.variant || 'simple-centered'
        const HeroComponent = HERO_SECTION_COMPONENTS[variant] || HeroSimpleCentered
        return <HeroComponent {...block} />
      }

      case 'footer-section': {
        const variant = block.variant || 'simple-centered'
        const FooterComponent = FOOTER_SECTION_COMPONENTS[variant] || FooterSimpleCentered
        return <FooterComponent {...block} />
      }

      case 'feature-section': {
        const variant = block.variant || 'simple-3x2-grid'
        const FeatureComponent = FEATURE_SECTION_COMPONENTS[variant] || FeatureSimple3x2Grid
        return <FeatureComponent {...block} />
      }

      case 'pricing-section': {
        const variant = block.variant || 'three-tiers'
        const PricingComponent = PRICING_SECTION_COMPONENTS[variant] || PricingThreeTiers
        return <PricingComponent {...block} />
      }

      case 'cta-section': {
        const variant = block.variant || 'simple-centered'
        const CTAComponent = CTA_SECTION_COMPONENTS[variant] || CTASimpleCentered
        return <CTAComponent {...block} />
      }

      case 'testimonial-section': {
        const variant = block.variant || 'simple-centered'
        const TestimonialComponent = TESTIMONIAL_SECTION_COMPONENTS[variant] || TestimonialSimpleCentered
        return <TestimonialComponent {...block} />
      }

      case 'blog-section': {
        const variant = block.variant || 'three-column'
        const BlogComponent = BLOG_SECTION_COMPONENTS[variant] || BlogThreeColumn
        return <BlogComponent {...block} />
      }

      case 'newsletter-section': {
        const variant = block.variant || 'simple-stacked'
        const NewsletterComponent = NEWSLETTER_SECTION_COMPONENTS[variant] || NewsletterSimpleStacked
        return <NewsletterComponent {...block} />
      }

      case 'stats-section': {
        const variant = block.variant || 'simple'
        const StatsComponent = STATS_SECTION_COMPONENTS[variant] || StatsSimple
        return <StatsComponent {...block} />
      }

      case 'team-section': {
        const variant = block.variant || 'with-small-images'
        const TeamComponent = TEAM_SECTION_COMPONENTS[variant] || TeamWithSmallImages
        return <TeamComponent {...block} />
      }

      case 'contact-section': {
        const variant = block.variant || 'centered'
        const ContactComponent = CONTACT_SECTION_COMPONENTS[variant] || ContactCentered
        return <ContactComponent {...block} />
      }

      case 'faq-section': {
        const variant = block.variant || 'two-columns'
        const FAQComponent = FAQ_SECTION_COMPONENTS[variant] || FAQTwoColumns
        return <FAQComponent {...block} />
      }

      case 'logo-cloud-section': {
        const variant = block.variant || 'simple'
        const LogoCloudComponent = LOGO_CLOUD_SECTION_COMPONENTS[variant] || LogoCloudSimple
        return <LogoCloudComponent {...block} />
      }

      case 'bento-grid-section': {
        const variant = block.variant || 'two-row'
        const BentoGridComponent = BENTO_GRID_SECTION_COMPONENTS[variant] || BentoGridTwoRow
        return <BentoGridComponent {...block} />
      }

      case 'content-section': {
        const variant = block.variant || 'centered'
        const ContentComponent = CONTENT_SECTION_COMPONENTS[variant] || ContentCentered
        return <ContentComponent {...block} />
      }

      case 'header-section': {
        const variant = block.variant || 'simple'
        const HeaderComponent = HEADER_SECTION_COMPONENTS[variant] || HeaderSimple
        return <HeaderComponent {...block} />
      }

      default:
        console.warn(`Unknown block type: ${block.type}`)
        return null
    }
  })}
