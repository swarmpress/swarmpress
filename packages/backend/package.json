{
  "name": "@swarm-press/backend",
  "version": "0.1.0",
  "private": true,
  "description": "API and database layer for swarm.press",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/bootstrap.ts",
    "build": "tsc",
    "start": "node dist/bootstrap.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "migrate": "psql $DATABASE_URL -f migrations/001_initial_schema.sql",
    "migrate:down": "psql $DATABASE_URL -f migrations/001_initial_schema_down.sql"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.1",
    "@aws-sdk/client-s3": "^3.937.0",
    "@aws-sdk/s3-request-presigner": "^3.937.0",
    "@octokit/rest": "^20.0.2",
    "@swarm-press/event-bus": "workspace:*",
    "@swarm-press/github-integration": "workspace:*",
    "@swarm-press/shared": "workspace:*",
    "@trpc/server": "^10.45.0",
    "@types/handlebars": "^4.1.0",
    "@types/js-yaml": "^4.0.9",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.1",
    "octokit": "^5.0.5",
    "pg": "^8.11.3",
    "sharp": "^0.33.0",
    "superjson": "^2.2.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
