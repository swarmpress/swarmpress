# Database
DATABASE_URL=postgresql://swarmpress:swarmpress@localhost:5432/swarmpress

# NATS
NATS_URL=nats://localhost:4222

# Temporal
TEMPORAL_URL=localhost:7233

# Claude API
ANTHROPIC_API_KEY=your_api_key_here

# Backend API
API_PORT=3000
API_SECRET=your_secret_key_here

# CEO Authentication
CEO_EMAIL=ceo@swarm.press
CEO_PASSWORD=changeme

# GitHub OAuth (for user authentication)
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret
GITHUB_CALLBACK_URL=http://localhost:4321/auth/github/callback

# GitHub Integration (for collaboration and governance)
GITHUB_TOKEN=ghp_your_token_here
GITHUB_OWNER=your-org
GITHUB_REPO=swarmpress-content
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Smee.io Webhook Proxy (for local development)
# Get your URL at https://smee.io - Click "Start a new channel"
SMEE_WEBHOOK_URL=https://smee.io/YOUR_CHANNEL_ID

# Or use GitHub App (alternative to token - more secure for production)
# GITHUB_APP_ID=123456
# GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n..."
# GITHUB_INSTALLATION_ID=78910

# CORS
CORS_ORIGIN=*

# Environment
NODE_ENV=development
LOG_LEVEL=info

# =============================================================================
# Media Storage (Cloudflare R2 - S3-compatible, zero egress costs)
# =============================================================================
# Get credentials at: https://dash.cloudflare.com > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=swarmpress-media
R2_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://cdn.example.com

# =============================================================================
# AI Image Generation (Google Gemini/Imagen)
# =============================================================================
# Google API Key - for Gemini/Imagen image generation
# Get at: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key

# =============================================================================
# External APIs (for Cinqueterre.travel and similar websites)
# =============================================================================
# Google Places API - POIs, restaurants, hotels, attractions
GOOGLE_PLACES_API_KEY=your_google_places_api_key

# OpenWeather API - Weather forecasts and climate data
OPENWEATHER_API_KEY=your_openweather_api_key

# Pexels API - Stock photography
PEXELS_API_KEY=your_pexels_api_key

# Unsplash API - Stock photography
UNSPLASH_ACCESS_KEY=your_unsplash_access_key
