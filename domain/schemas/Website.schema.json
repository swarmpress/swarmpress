{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agent.press/schemas/Website.schema.json",
  "title": "Website",
  "description": "A complete content publication surface managed by agent.press",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique website identifier",
      "format": "uuid"
    },
    "domain": {
      "type": "string",
      "description": "Domain name (e.g. cinqueterre.press)",
      "format": "hostname"
    },
    "title": {
      "type": "string",
      "description": "Human-readable title",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Purpose or theme of the website"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["id", "domain", "title", "created_at", "updated_at"],
  "additionalProperties": false
}
