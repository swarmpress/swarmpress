{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://swarm.press/schemas/ContentItem.schema.json",
  "title": "ContentItem",
  "description": "The atomic unit of content (article, section, hero, etc.)",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique content identifier",
      "format": "uuid"
    },
    "website_id": {
      "type": "string",
      "description": "Foreign key to Website",
      "format": "uuid"
    },
    "page_id": {
      "type": ["string", "null"],
      "description": "Optional foreign key to WebPage",
      "format": "uuid"
    },
    "type": {
      "type": "string",
      "description": "Content type",
      "enum": ["article", "section", "hero", "metadata", "component"]
    },
    "body": {
      "type": "array",
      "description": "Array of JSON blocks (see JSON_BLOCK_MODEL.md)",
      "items": {
        "type": "object"
      }
    },
    "metadata": {
      "type": "object",
      "description": "Tags, category, SEO, reading time, etc.",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "category": {
          "type": "string"
        },
        "reading_time": {
          "type": "string"
        },
        "seo_keywords": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "author_agent_id": {
      "type": "string",
      "description": "Foreign key to Agent",
      "format": "uuid"
    },
    "status": {
      "type": "string",
      "description": "Lifecycle state",
      "enum": [
        "idea",
        "planned",
        "brief_created",
        "draft",
        "in_editorial_review",
        "needs_changes",
        "approved",
        "scheduled",
        "published",
        "archived"
      ]
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "id",
    "website_id",
    "type",
    "body",
    "author_agent_id",
    "status",
    "created_at",
    "updated_at"
  ],
  "additionalProperties": false
}
