{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://swarm.press/schemas/Review.schema.json",
  "title": "Review",
  "description": "Editorial judgment on content",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique review identifier",
      "format": "uuid"
    },
    "content_id": {
      "type": "string",
      "description": "Content under review",
      "format": "uuid"
    },
    "reviewer_agent_id": {
      "type": "string",
      "description": "Agent who performed the review",
      "format": "uuid"
    },
    "result": {
      "type": "string",
      "description": "Review outcome",
      "enum": ["approved", "needs_changes", "rejected"]
    },
    "comments": {
      "type": "string",
      "description": "Human-readable explanation of the decision"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "id",
    "content_id",
    "reviewer_agent_id",
    "result",
    "comments",
    "created_at",
    "updated_at"
  ],
  "additionalProperties": false
}
