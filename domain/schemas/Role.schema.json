{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agent.press/schemas/Role.schema.json",
  "title": "Role",
  "description": "A function within a department (Writer, Editor, SEO Specialist, etc.)",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier",
      "format": "uuid"
    },
    "department_id": {
      "type": "string",
      "description": "Foreign key to Department",
      "format": "uuid"
    },
    "name": {
      "type": "string",
      "description": "Role title",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Narrative overview of role responsibilities"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["id", "department_id", "name", "description", "created_at", "updated_at"],
  "additionalProperties": false
}
