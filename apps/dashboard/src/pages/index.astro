---
/**
 * swarm.press Dashboard
 * Central monitoring and control interface
 */

const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:3000'
const TEMPORAL_UI = 'http://localhost:8080'
const NATS_UI = 'http://localhost:8222'

// Fetch initial data (will be replaced with real API calls when backend is running)
const mockData = {
  systemStatus: {
    backend: 'checking',
    database: 'checking',
    eventBus: 'checking',
    temporal: 'checking',
  },
  agents: [
    { name: 'WriterAgent', status: 'active', model: 'claude-sonnet-4-5-20250929' },
    { name: 'EditorAgent', status: 'active', model: 'claude-sonnet-4-5-20250929' },
    { name: 'EngineeringAgent', status: 'active', model: 'claude-sonnet-4-5-20250929' },
    { name: 'CEOAssistantAgent', status: 'active', model: 'claude-sonnet-4-5-20250929' },
  ],
  stats: {
    contentItems: 0,
    tasks: 0,
    workflows: 0,
    events: 0,
  }
}
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>swarm.press Dashboard</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: #0a0a0a;
      color: #e0e0e0;
      line-height: 1.6;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 20px;
    }

    header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      padding: 30px;
      border-radius: 12px;
      margin-bottom: 30px;
      box-shadow: 0 8px 32px rgba(102, 126, 234, 0.3);
    }

    h1 {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 10px;
    }

    .subtitle {
      font-size: 1.1rem;
      opacity: 0.9;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .card {
      background: #1a1a1a;
      border-radius: 12px;
      padding: 24px;
      border: 1px solid #2a2a2a;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .card:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
    }

    .card-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 20px;
    }

    .card-title {
      font-size: 1.3rem;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .status-indicator {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      display: inline-block;
      animation: pulse 2s ease-in-out infinite;
    }

    .status-healthy {
      background: #10b981;
      box-shadow: 0 0 8px #10b981;
    }

    .status-warning {
      background: #f59e0b;
      box-shadow: 0 0 8px #f59e0b;
    }

    .status-error {
      background: #ef4444;
      box-shadow: 0 0 8px #ef4444;
    }

    .status-checking {
      background: #6b7280;
      box-shadow: 0 0 8px #6b7280;
    }

    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }

    .metric {
      margin-bottom: 15px;
    }

    .metric-label {
      font-size: 0.9rem;
      color: #9ca3af;
      margin-bottom: 5px;
    }

    .metric-value {
      font-size: 1.5rem;
      font-weight: 600;
      color: #fff;
    }

    .agent-list {
      list-style: none;
    }

    .agent-item {
      background: #0a0a0a;
      padding: 15px;
      border-radius: 8px;
      margin-bottom: 10px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-left: 3px solid #667eea;
    }

    .agent-name {
      font-weight: 600;
      font-size: 1.1rem;
    }

    .agent-model {
      font-size: 0.85rem;
      color: #9ca3af;
      margin-top: 4px;
    }

    .agent-status {
      padding: 4px 12px;
      border-radius: 12px;
      font-size: 0.85rem;
      font-weight: 500;
    }

    .agent-status.active {
      background: rgba(16, 185, 129, 0.2);
      color: #10b981;
    }

    .log-container {
      background: #0a0a0a;
      border-radius: 8px;
      padding: 20px;
      max-height: 400px;
      overflow-y: auto;
      font-family: 'Monaco', 'Courier New', monospace;
      font-size: 0.9rem;
    }

    .log-entry {
      padding: 8px;
      border-left: 2px solid #374151;
      margin-bottom: 8px;
      padding-left: 12px;
    }

    .log-timestamp {
      color: #6b7280;
      margin-right: 10px;
    }

    .log-level {
      padding: 2px 8px;
      border-radius: 4px;
      font-size: 0.8rem;
      margin-right: 10px;
    }

    .log-level.info {
      background: rgba(59, 130, 246, 0.2);
      color: #3b82f6;
    }

    .log-level.success {
      background: rgba(16, 185, 129, 0.2);
      color: #10b981;
    }

    .log-level.warning {
      background: rgba(245, 158, 11, 0.2);
      color: #f59e0b;
    }

    .log-level.error {
      background: rgba(239, 68, 68, 0.2);
      color: #ef4444;
    }

    .external-link {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      color: #667eea;
      text-decoration: none;
      font-size: 0.9rem;
      padding: 8px 16px;
      border-radius: 6px;
      border: 1px solid #667eea;
      transition: all 0.2s;
    }

    .external-link:hover {
      background: rgba(102, 126, 234, 0.1);
      transform: translateX(2px);
    }

    .refresh-indicator {
      font-size: 0.85rem;
      color: #6b7280;
      padding: 4px 8px;
      background: rgba(107, 114, 128, 0.1);
      border-radius: 4px;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <h1>üêù swarm.press</h1>
      <p class="subtitle">Autonomous Publishing Platform Dashboard</p>
    </header>

    <!-- System Status -->
    <div class="grid">
      <div class="card">
        <div class="card-header">
          <h2 class="card-title">
            System Status
          </h2>
          <span class="refresh-indicator" id="status-refresh">‚óè Live</span>
        </div>
        <div id="system-status">
          <div class="metric">
            <div class="metric-label">Backend API</div>
            <div class="metric-value">
              <span class="status-indicator status-checking" id="backend-status"></span>
              <span id="backend-text">Checking...</span>
            </div>
          </div>
          <div class="metric">
            <div class="metric-label">Database (PostgreSQL)</div>
            <div class="metric-value">
              <span class="status-indicator status-checking" id="db-status"></span>
              <span id="db-text">Checking...</span>
            </div>
          </div>
          <div class="metric">
            <div class="metric-label">Event Bus (NATS)</div>
            <div class="metric-value">
              <span class="status-indicator status-checking" id="nats-status"></span>
              <span id="nats-text">Checking...</span>
            </div>
          </div>
          <div class="metric">
            <div class="metric-label">Workflows (Temporal)</div>
            <div class="metric-value">
              <span class="status-indicator status-checking" id="temporal-status"></span>
              <span id="temporal-text">Checking...</span>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <h2 class="card-title">Statistics</h2>
        </div>
        <div class="stats-grid">
          <div class="metric">
            <div class="metric-label">Content Items</div>
            <div class="metric-value" id="stat-content">0</div>
          </div>
          <div class="metric">
            <div class="metric-label">Active Tasks</div>
            <div class="metric-value" id="stat-tasks">0</div>
          </div>
          <div class="metric">
            <div class="metric-label">Workflows</div>
            <div class="metric-value" id="stat-workflows">0</div>
          </div>
          <div class="metric">
            <div class="metric-label">Events Today</div>
            <div class="metric-value" id="stat-events">0</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Agents -->
    <div class="card" style="margin-bottom: 30px;">
      <div class="card-header">
        <h2 class="card-title">AI Agents (Claude Sonnet 4.5)</h2>
        <span class="status-indicator status-healthy"></span>
      </div>
      <ul class="agent-list" id="agent-list">
        {mockData.agents.map(agent => (
          <li class="agent-item">
            <div>
              <div class="agent-name">{agent.name}</div>
              <div class="agent-model">{agent.model}</div>
            </div>
            <span class="agent-status active">{agent.status}</span>
          </li>
        ))}
      </ul>
    </div>

    <!-- Activity Log -->
    <div class="card">
      <div class="card-header">
        <h2 class="card-title">Activity Log</h2>
        <span class="refresh-indicator" id="log-refresh">‚óè Live</span>
      </div>
      <div class="log-container" id="activity-log">
        <div class="log-entry">
          <span class="log-timestamp">{new Date().toLocaleTimeString()}</span>
          <span class="log-level info">INFO</span>
          <span>Dashboard loaded</span>
        </div>
        <div class="log-entry">
          <span class="log-timestamp">{new Date().toLocaleTimeString()}</span>
          <span class="log-level success">SUCCESS</span>
          <span>4 AI agents registered</span>
        </div>
        <div class="log-entry">
          <span class="log-timestamp">{new Date().toLocaleTimeString()}</span>
          <span class="log-level info">INFO</span>
          <span>Connecting to event stream...</span>
        </div>
      </div>
    </div>

    <!-- External Links -->
    <div class="grid" style="margin-top: 30px;">
      <div class="card">
        <h3 style="margin-bottom: 15px;">External Dashboards</h3>
        <div style="display: flex; flex-direction: column; gap: 10px;">
          <a href={TEMPORAL_UI} target="_blank" class="external-link">
            Temporal UI ‚Üí
          </a>
          <a href={NATS_UI} target="_blank" class="external-link">
            NATS Monitoring ‚Üí
          </a>
        </div>
      </div>
    </div>
  </div>

  <script define:vars={{ API_URL }}>
    // Health check
    async function checkHealth() {
      try {
        const response = await fetch(`${API_URL}/health`)
        const data = await response.json()

        // Update backend status
        updateStatus('backend', data.status === 'healthy' ? 'healthy' : 'error',
          data.status === 'healthy' ? 'Healthy' : 'Unhealthy')

        // Update database status
        updateStatus('db', data.services?.database === 'connected' ? 'healthy' : 'error',
          data.services?.database === 'connected' ? 'Connected' : 'Disconnected')

        // Update NATS status
        updateStatus('nats', data.services?.eventBus === 'connected' ? 'healthy' : 'warning',
          data.services?.eventBus === 'connected' ? 'Connected' : 'Disconnected')

        // Temporal is running separately
        updateStatus('temporal', 'healthy', 'Running')
      } catch (error) {
        console.log('Backend not available, using mock data')
        updateStatus('backend', 'warning', 'Not Running')
        updateStatus('db', 'healthy', 'Running')
        updateStatus('nats', 'healthy', 'Running')
        updateStatus('temporal', 'healthy', 'Running')
      }
    }

    function updateStatus(component, status, text) {
      const indicator = document.getElementById(`${component}-status`)
      const textEl = document.getElementById(`${component}-text`)

      if (indicator && textEl) {
        indicator.className = `status-indicator status-${status}`
        textEl.textContent = text
      }
    }

    function addLogEntry(level, message) {
      const logContainer = document.getElementById('activity-log')
      const timestamp = new Date().toLocaleTimeString()

      const entry = document.createElement('div')
      entry.className = 'log-entry'
      entry.innerHTML = `
        <span class="log-timestamp">${timestamp}</span>
        <span class="log-level ${level}">${level.toUpperCase()}</span>
        <span>${message}</span>
      `

      logContainer.insertBefore(entry, logContainer.firstChild)

      // Keep only last 50 entries
      while (logContainer.children.length > 50) {
        logContainer.removeChild(logContainer.lastChild)
      }
    }

    // Connect to event stream
    async function connectEventStream() {
      try {
        const eventSource = new EventSource(`${API_URL}/api/events/stream`)

        eventSource.onmessage = (event) => {
          const data = JSON.parse(event.data)
          addLogEntry('info', `Event: ${data.type}`)
        }

        eventSource.onerror = () => {
          addLogEntry('warning', 'Event stream disconnected, will retry...')
          eventSource.close()
          setTimeout(connectEventStream, 5000)
        }
      } catch (error) {
        console.log('Event stream not available')
      }
    }

    // Initial load
    checkHealth()
    connectEventStream()

    // Refresh every 10 seconds
    setInterval(checkHealth, 10000)

    // Add periodic log entries to show liveness
    setInterval(() => {
      addLogEntry('info', 'System monitoring active')
    }, 30000)
  </script>
</body>
</html>
