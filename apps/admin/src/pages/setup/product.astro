---
/**
 * Product Selection Page
 * Second step: Select which website/product to work with within the tenant
 */

import { getSessionContext } from '../../lib/session'
import { trpc, handleTRPCError } from '../../lib/trpc'

// Get current session
const session = getSessionContext(Astro.cookies)

// Redirect to tenant selection if no tenant
if (!session.tenantId) {
  return Astro.redirect('/setup/tenant')
}

// Fetch tenant info
let tenant: any = null
try {
  tenant = await trpc.company.getById.query({ id: session.tenantId })
} catch (e) {
  console.error('Failed to fetch tenant:', e)
  return Astro.redirect('/setup/tenant')
}

// Fetch products for this tenant
let products: any[] = []
let error: string | null = null

try {
  const result = await trpc.website.list.query({})
  const allProducts = result.items || []
  products = allProducts.filter(p => p.company_id === session.tenantId)
} catch (e) {
  error = handleTRPCError(e)
  console.error('Failed to fetch products:', error)
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Select Product - swarm.press Admin</title>
  </head>
  <body class="bg-gray-50">
    <div class="min-h-screen flex items-center justify-center p-8">
      <div class="max-w-2xl w-full">
        <!-- Header -->
        <div class="text-center mb-8">
          <h1 class="text-4xl font-bold text-gray-900 mb-2">üêù swarm.press</h1>
          <p class="text-lg text-gray-600">Select a Product to work with</p>
          <div class="mt-4 inline-flex items-center gap-2 bg-blue-50 text-blue-700 px-4 py-2 rounded-lg">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            <span class="font-medium">{tenant.name}</span>
          </div>
        </div>

        <!-- Product List -->
        {error ? (
          <div class="bg-red-50 border border-red-200 rounded-lg p-6 text-center">
            <p class="text-red-800 font-medium">Error loading products</p>
            <p class="text-red-600 text-sm mt-2">{error}</p>
          </div>
        ) : products.length === 0 ? (
          <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-8 text-center">
            <svg class="w-16 h-16 text-yellow-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
            </svg>
            <h2 class="text-xl font-semibold text-yellow-800 mb-2">No Products Found</h2>
            <p class="text-yellow-700 mb-4">You need to create a website/product for this media house.</p>
            <a
              href="/websites/new"
              class="inline-block bg-yellow-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-yellow-700 transition-colors"
            >
              Create Your First Product
            </a>
          </div>
        ) : (
          <div class="space-y-4">
            {products.map(product => (
              <button
                onclick={`selectProduct('${product.id}')`}
                class="w-full bg-white border border-gray-200 rounded-lg p-6 hover:border-blue-500 hover:shadow-lg transition-all text-left group"
              >
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h3 class="text-xl font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
                      {product.domain}
                    </h3>
                    {product.title && (
                      <p class="text-gray-600 mt-2">{product.title}</p>
                    )}
                    {product.description && (
                      <p class="text-gray-500 text-sm mt-1">{product.description}</p>
                    )}
                    <div class="mt-3 flex items-center gap-4 text-sm text-gray-500">
                      <span class="inline-flex items-center gap-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        <span class="uppercase text-xs font-semibold">{product.status || 'active'}</span>
                      </span>
                      <span class="inline-flex items-center gap-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                        </svg>
                        <span>ID: {product.id.slice(0, 8)}...</span>
                      </span>
                    </div>
                  </div>
                  <svg class="w-6 h-6 text-gray-400 group-hover:text-blue-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </button>
            ))}
          </div>
        )}

        <!-- Footer -->
        <div class="mt-8 text-center space-x-4">
          <button
            onclick="changeTenant()"
            class="text-sm text-gray-600 hover:text-gray-900 transition-colors"
          >
            ‚Üê Change Media House
          </button>
          <a href="/websites" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">
            Manage Products ‚Üí
          </a>
        </div>
      </div>
    </div>

    <script>
      function selectProduct(productId: string) {
        // Set product cookie
        document.cookie = `swarmpress_product_id=${productId}; path=/; max-age=31536000`
        // Redirect to dashboard
        window.location.href = '/'
      }

      function changeTenant() {
        // Clear tenant and product
        document.cookie = `swarmpress_tenant_id=; path=/; max-age=0`
        document.cookie = `swarmpress_product_id=; path=/; max-age=0`
        // Go back to tenant selection
        window.location.href = '/setup/tenant'
      }

      // Make functions globally available
      ;(window as any).selectProduct = selectProduct
      ;(window as any).changeTenant = changeTenant
    </script>

    <style is:global>
      @tailwind base;
      @tailwind components;
      @tailwind utilities;
    </style>
  </body>
</html>
