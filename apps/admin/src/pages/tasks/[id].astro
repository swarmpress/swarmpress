---
import Layout from '../../layouts/Layout.astro'
import { Button } from '../../components/ui/button'
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../../components/ui/card'
import { Badge } from '../../components/ui/badge'
import { trpc, handleTRPCError } from '../../lib/trpc'

const { id } = Astro.params

if (!id) {
  return Astro.redirect('/tasks')
}

let task: any = null
let error: string | null = null

try {
  task = await trpc.task.getById.query({ id })
} catch (e) {
  error = handleTRPCError(e)
  console.error('Failed to fetch task:', error)
}

if (!task) {
  return Astro.redirect('/tasks')
}

// Helper to get status badge variant
function getStatusVariant(status: string) {
  switch (status) {
    case 'completed':
      return 'default'
    case 'in_progress':
      return 'secondary'
    case 'planned':
      return 'outline'
    case 'failed':
      return 'destructive'
    default:
      return 'outline'
  }
}
---

<Layout title="Task Details">
  <div>
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold">Task Details</h1>
        <p class="text-muted-foreground mt-2">View task information and status</p>
      </div>
      <a href="/tasks">
        <Button variant="outline">‚Üê Back to Tasks</Button>
      </a>
    </div>

    {error ? (
      <Card className="border-destructive">
        <CardHeader>
          <CardTitle className="text-destructive">Error Loading Task</CardTitle>
          <CardDescription>{error}</CardDescription>
        </CardHeader>
      </Card>
    ) : (
      <div class="space-y-6">
        <!-- Metadata Card -->
        <Card>
          <CardHeader>
            <div class="flex items-start justify-between">
              <div>
                <CardTitle>{task.type.replace(/_/g, ' ')}</CardTitle>
                <CardDescription>
                  Created {new Date(task.created_at).toLocaleDateString()}
                </CardDescription>
              </div>
              <Badge variant={getStatusVariant(task.status)}>
                {task.status.replace(/_/g, ' ')}
              </Badge>
            </div>
          </CardHeader>
          <CardContent>
            <dl class="grid grid-cols-2 gap-4">
              <div>
                <dt class="text-sm font-medium text-muted-foreground">ID</dt>
                <dd class="text-sm mt-1">
                  <code class="bg-muted px-2 py-1 rounded">{task.id}</code>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-muted-foreground">Type</dt>
                <dd class="text-sm mt-1">
                  <Badge variant="outline">{task.type}</Badge>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-muted-foreground">Assigned Agent</dt>
                <dd class="text-sm mt-1">
                  {task.agent ? (
                    <a href={`/agents/${task.agent.id}`} class="text-blue-600 hover:underline">
                      {task.agent.name}
                    </a>
                  ) : (
                    'Unassigned'
                  )}
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-muted-foreground">Content Item</dt>
                <dd class="text-sm mt-1">
                  {task.content ? (
                    <a href={`/content/${task.content.id}`} class="text-blue-600 hover:underline">
                      {task.content.title || task.content.id}
                    </a>
                  ) : (
                    'N/A'
                  )}
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-muted-foreground">Created</dt>
                <dd class="text-sm mt-1">{new Date(task.created_at).toLocaleString()}</dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-muted-foreground">Updated</dt>
                <dd class="text-sm mt-1">{new Date(task.updated_at).toLocaleString()}</dd>
              </div>
            </dl>
          </CardContent>
        </Card>

        <!-- Payload Card (if available) -->
        {task.payload && Object.keys(task.payload).length > 0 && (
          <Card>
            <CardHeader>
              <CardTitle>Task Payload</CardTitle>
              <CardDescription>Task configuration and parameters</CardDescription>
            </CardHeader>
            <CardContent>
              <pre class="text-sm bg-muted p-4 rounded overflow-auto">
                {JSON.stringify(task.payload, null, 2)}
              </pre>
            </CardContent>
          </Card>
        )}

        <!-- Result Card (if available) -->
        {task.result && Object.keys(task.result).length > 0 && (
          <Card>
            <CardHeader>
              <CardTitle>Task Result</CardTitle>
              <CardDescription>Output from task execution</CardDescription>
            </CardHeader>
            <CardContent>
              <pre class="text-sm bg-muted p-4 rounded overflow-auto">
                {JSON.stringify(task.result, null, 2)}
              </pre>
            </CardContent>
          </Card>
        )}

        <!-- Error Card (if available) -->
        {task.error && (
          <Card className="border-destructive">
            <CardHeader>
              <CardTitle className="text-destructive">Task Error</CardTitle>
              <CardDescription>Error encountered during execution</CardDescription>
            </CardHeader>
            <CardContent>
              <pre class="text-sm bg-destructive/10 p-4 rounded overflow-auto">
                {task.error}
              </pre>
            </CardContent>
          </Card>
        )}
      </div>
    )}
  </div>
</Layout>
