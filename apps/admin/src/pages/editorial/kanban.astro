---
/**
 * Kanban Board Page
 * Editorial task management with drag-and-drop
 * Requires: Tenant + Product selection
 */

import Layout from '../../layouts/Layout.astro'
import { KanbanWithToast } from '../../components/editorial/KanbanWithToast'
import { requireSession } from '../../lib/session'

// Require both tenant and product to be selected
let session
try {
  session = requireSession(Astro.cookies)
} catch (error) {
  const redirectMatch = error.message.match(/REDIRECT:(.+)/)
  if (redirectMatch) {
    return Astro.redirect(redirectMatch[1])
  }
  return Astro.redirect('/')
}

const websiteId = session.productId
---

<Layout title="Editorial Kanban">
  <div class="h-screen flex flex-col overflow-hidden">
    <!-- Page Header -->
    <div class="bg-white border-b border-gray-200 px-6 py-4">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Editorial Kanban</h1>
          <p class="text-sm text-gray-600 mt-1">Manage content planning tasks</p>
        </div>

        <div class="flex items-center gap-3">
          <!-- View Switcher -->
          <a
            href="/editorial/gantt"
            class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors font-medium"
          >
            ğŸ“Š Gantt
          </a>
          <a
            href="/editorial/graph"
            class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors font-medium"
          >
            ğŸ•¸ï¸ Graph
          </a>

          <!-- Quick Actions -->
          <button
            id="new-task-btn"
            class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium"
          >
            + New Task
          </button>

          <button
            id="sync-github-btn"
            class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors font-medium"
          >
            ğŸ”„ Sync GitHub
          </button>

          <a
            href="/sitemap"
            class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors font-medium"
          >
            ğŸ—ºï¸ Sitemap
          </a>
        </div>
      </div>
    </div>

    <!-- Kanban View (React Component) -->
    <div class="flex-1 overflow-hidden" id="kanban-container">
      <KanbanWithToast client:only="react" websiteId={websiteId} />
    </div>
  </div>
</Layout>

<script>
  // New Task Modal
  document.getElementById('new-task-btn')?.addEventListener('click', () => {
    // Dispatch custom event that KanbanView will listen for
    const event = new CustomEvent('kanban:new-task')
    window.dispatchEvent(event)
  })

  // Sync GitHub (placeholder)
  document.getElementById('sync-github-btn')?.addEventListener('click', () => {
    alert('GitHub sync - to be implemented in Phase 6')
  })
</script>
