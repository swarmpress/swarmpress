---
/**
 * Login Page
 * GitHub OAuth authentication
 */

import AuthLayout from '../layouts/AuthLayout.astro'
import { isAuthenticated } from '../lib/session'

// If already authenticated, redirect to home
if (isAuthenticated(Astro.cookies)) {
  return Astro.redirect('/')
}

// Get return URL from query params
const returnTo = Astro.url.searchParams.get('returnTo') || '/'
---

<AuthLayout title="Sign In - swarm.press">
  <div class="min-h-screen flex items-center justify-center bg-gray-50 px-4">
    <div class="max-w-md w-full space-y-8">
      <!-- Logo/Header -->
      <div class="text-center">
        <h2 class="text-4xl font-bold text-gray-900">swarm.press</h2>
        <p class="mt-2 text-sm text-gray-600">
          Autonomous Virtual Publishing House
        </p>
      </div>

      <!-- Auth Card -->
      <div class="bg-white py-8 px-6 shadow-lg rounded-lg">
        <div class="space-y-6">
          <div>
            <h3 class="text-2xl font-semibold text-gray-900 text-center">
              Sign in to continue
            </h3>
            <p class="mt-2 text-sm text-gray-600 text-center">
              Use your GitHub account to access the dashboard
            </p>
          </div>

          <!-- GitHub Sign In Button -->
          <div>
            <button
              id="github-signin-btn"
              class="w-full flex items-center justify-center px-4 py-3 border border-transparent text-base font-medium rounded-md text-white bg-gray-900 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 transition-colors"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z"
                  clip-rule="evenodd"
                ></path>
              </svg>
              <span>Sign in with GitHub</span>
            </button>
          </div>

          <!-- Loading State -->
          <div id="loading-state" class="hidden text-center text-sm text-gray-600">
            <div class="animate-spin inline-block w-5 h-5 border-2 border-gray-900 border-t-transparent rounded-full mb-2"></div>
            <p>Redirecting to GitHub...</p>
          </div>
        </div>
      </div>

      <!-- Info Footer -->
      <div class="text-center text-xs text-gray-500">
        <p>
          By signing in, you agree to our Terms of Service and Privacy Policy
        </p>
      </div>
    </div>
  </div>

  <script define:vars={{ returnTo }}>
    const button = document.getElementById('github-signin-btn')
    const loadingState = document.getElementById('loading-state')

    button?.addEventListener('click', async () => {
      try {
        // Show loading state
        button.classList.add('hidden')
        loadingState?.classList.remove('hidden')

        // Get GitHub auth URL from backend
        const response = await fetch('/api/trpc/auth.getGitHubAuthUrl', {
          method: 'GET',
          headers: {
            'Content-Type': 'application/json',
          },
        })

        const data = await response.json()

        if (data.result?.data?.url) {
          // Redirect to GitHub OAuth
          window.location.href = data.result.data.url
        } else {
          throw new Error('Failed to get auth URL')
        }
      } catch (error) {
        console.error('Auth error:', error)
        button.classList.remove('hidden')
        loadingState?.classList.add('hidden')
        alert('Failed to initiate GitHub sign in. Please try again.')
      }
    })
  </script>
</AuthLayout>
