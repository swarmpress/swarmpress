---
/**
 * Collection Items List Page
 * Lists all items for a specific collection type
 * Data comes from GitHub (source of truth)
 */
import Layout from '../../../layouts/Layout.astro'
import { trpc, handleTRPCError } from '../../../lib/trpc'
import { getSessionContext } from '../../../lib/session'

const { type } = Astro.params

// Get session to check for selected website
const session = getSessionContext(Astro.cookies)
const websiteId = session.productId

// Fetch collection info and items from GitHub
let collection: any = null
let items: any[] = []
let error: string | null = null

if (websiteId && type) {
  try {
    // Get collection schema from GitHub
    collection = await trpc.github.getCollectionSchema.query({
      websiteId,
      collectionType: type,
    })

    // Get collection items from GitHub
    const result = await trpc.github.listCollectionItems.query({
      websiteId,
      collectionType: type,
    })
    items = result.items || []
  } catch (e) {
    error = handleTRPCError(e)
    console.error('Failed to fetch collection from GitHub:', error)
  }
}

// Client-side pagination (since GitHub returns all items)
const page = parseInt(Astro.url.searchParams.get('page') || '1')
const limit = 25
const offset = (page - 1) * limit
const total = items.length
const paginatedItems = items.slice(offset, offset + limit)
const totalPages = Math.ceil(total / limit)
const hasNextPage = page < totalPages
const hasPrevPage = page > 1

// Helper to get display value from item data
function getDisplayValue(item: any, field: string | null | undefined): string {
  if (!field) return ''
  // Check in data object first
  const data = item.data || item
  const value = data[field]
  // Handle multilingual fields (e.g., { en: "...", de: "..." })
  if (value && typeof value === 'object' && !Array.isArray(value)) {
    // Return English version or first available
    return value.en || value.de || value.it || value.fr || Object.values(value)[0] || ''
  }
  if (typeof value === 'string') return value
  if (typeof value === 'number') return String(value)
  if (value === null || value === undefined) return ''
  return JSON.stringify(value)
}

// Get title for an item
function getItemTitle(item: any): string {
  const titleField = collection?.title_field || 'name'
  return getDisplayValue(item, titleField) || item.slug
}

// Get summary for an item
function getItemSummary(item: any): string {
  if (collection?.summary_field) {
    return getDisplayValue(item, collection.summary_field)
  }
  return ''
}

const title = collection ? `${collection.display_name} Items` : 'Collection Items'
---

<Layout title={title}>
  <div class="mb-8">
    <div class="flex items-center gap-2 text-sm text-gray-500 mb-4">
      <a href="/collections" class="hover:text-gray-700">Collections</a>
      <span>/</span>
      <span class="text-gray-900">{collection?.display_name || type}</span>
    </div>

    <div class="flex items-center justify-between">
      <div>
        <div class="flex items-center gap-3">
          {collection?.icon && (
            <span class="text-3xl">{collection.icon}</span>
          )}
          <h1 class="text-3xl font-bold text-gray-900">{collection?.display_name || type}</h1>
          <span class="inline-flex items-center gap-1 px-2 py-1 bg-gray-100 rounded-md text-xs text-gray-500">
            <span>üêô</span>
            <span>GitHub</span>
          </span>
        </div>
        {collection?.description && (
          <p class="text-gray-600 mt-2">{collection.description}</p>
        )}
      </div>
      {websiteId && collection && (
        <div class="flex gap-2">
          <a
            href={`/collections/${type}/schema`}
            class="px-4 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition-colors"
          >
            View Schema
          </a>
        </div>
      )}
    </div>
  </div>

  {!websiteId ? (
    <div class="text-center py-12 bg-amber-50 border border-amber-200 rounded-lg">
      <div class="text-4xl mb-4">üåê</div>
      <h3 class="text-xl font-semibold text-gray-900 mb-2">No Website Selected</h3>
      <p class="text-gray-600 mb-6">
        Please select a website from the sidebar to view collection items
      </p>
      <a
        href="/websites"
        class="inline-block px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
      >
        View Websites
      </a>
    </div>
  ) : error ? (
    <div class="text-center py-12 text-red-600 bg-red-50 border border-red-200 rounded-lg">
      <p>Failed to load collection: {error}</p>
    </div>
  ) : !collection ? (
    <div class="text-center py-12 bg-gray-50 rounded-lg">
      <div class="text-6xl mb-4">üîç</div>
      <h3 class="text-xl font-semibold text-gray-900 mb-2">Collection Not Found</h3>
      <p class="text-gray-600 mb-6">
        The collection type "{type}" does not exist for this website
      </p>
      <a
        href="/collections"
        class="inline-block px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
      >
        Back to Collections
      </a>
    </div>
  ) : items.length === 0 ? (
    <div class="text-center py-12 bg-gray-50 rounded-lg">
      <div class="text-6xl mb-4">üì≠</div>
      <h3 class="text-xl font-semibold text-gray-900 mb-2">No Items Yet</h3>
      <p class="text-gray-600 mb-6">
        This collection doesn't have any items in the GitHub repository.
      </p>
    </div>
  ) : (
    <div>
      <!-- Stats bar -->
      <div class="flex items-center justify-between mb-4 text-sm text-gray-600">
        <div>
          Showing {offset + 1}-{Math.min(offset + paginatedItems.length, total)} of {total} items
        </div>
        {items.some(i => i.village) && (
          <div class="flex gap-2">
            {[...new Set(items.map(i => i.village).filter(Boolean))].map((village) => (
              <span class="px-2 py-1 bg-blue-100 text-blue-700 text-xs rounded">
                {village}
              </span>
            ))}
          </div>
        )}
      </div>

      <!-- Items table -->
      <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
        <table class="w-full">
          <thead class="bg-gray-50 border-b border-gray-200">
            <tr>
              <th class="px-4 py-3 text-left text-sm font-medium text-gray-600">Title</th>
              <th class="px-4 py-3 text-left text-sm font-medium text-gray-600">Slug</th>
              {items.some(i => i.village) && (
                <th class="px-4 py-3 text-left text-sm font-medium text-gray-600">Village</th>
              )}
              <th class="px-4 py-3 text-left text-sm font-medium text-gray-600">Source</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            {paginatedItems.map((item) => (
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-3">
                  <div class="flex items-center gap-2">
                    {item.featured && (
                      <span class="text-amber-500" title="Featured">‚òÖ</span>
                    )}
                    <span class="font-medium text-gray-900">{getItemTitle(item)}</span>
                  </div>
                  {getItemSummary(item) && (
                    <p class="text-sm text-gray-500 mt-0.5 line-clamp-1">
                      {getItemSummary(item)}
                    </p>
                  )}
                </td>
                <td class="px-4 py-3 text-sm text-gray-600 font-mono">
                  {item.slug}
                </td>
                {items.some(i => i.village) && (
                  <td class="px-4 py-3 text-sm text-gray-600">
                    {item.village || '-'}
                  </td>
                )}
                <td class="px-4 py-3 text-sm text-gray-500">
                  <span class="font-mono text-xs">{item.sourceFile?.split('/').pop()}</span>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      {totalPages > 1 && (
        <div class="flex items-center justify-between mt-6">
          <div class="text-sm text-gray-600">
            Page {page} of {totalPages}
          </div>
          <div class="flex gap-2">
            {hasPrevPage && (
              <a
                href={`/collections/${type}?page=${page - 1}`}
                class="px-4 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition-colors"
              >
                Previous
              </a>
            )}
            {hasNextPage && (
              <a
                href={`/collections/${type}?page=${page + 1}`}
                class="px-4 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition-colors"
              >
                Next
              </a>
            )}
          </div>
        </div>
      )}
    </div>
  )}
</Layout>

